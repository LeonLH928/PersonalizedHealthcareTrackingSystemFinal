<Page x:Class="PersonalizedHealthcareTrackingSystemFinal.Views.PharmacistView.PharmacistHistoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:fa="http://schemas.fontawesome.io/icons/"
      xmlns:converters="clr-namespace:PersonalizedHealthcareTrackingSystemFinal.Helpers"       
      xmlns:local="clr-namespace:PersonalizedHealthcareTrackingSystemFinal.Views.PharmacistView"
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="1500"
      Title="PharmacistHistoryPage">

    <Page.Resources>
        <converters:LocalToUtcDisplayConverter x:Key="LocalToUtcDisplayConverter"/>
        <converters:StatToVisibility x:Key="StatToVisibility"/>
        <converters:UrgentToVisibility x:Key="UrgentToVisibility"/>
        <converters:ZeroStockToVisibility x:Key="ZeroStockToVisibility"/>
        <converters:LowStockToVisibility x:Key="LowStockToVisibility"/>
        <converters:NormalStockToVisibility x:Key="NormalStockToVisibility"/>
    </Page.Resources>

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Style="{StaticResource PageHeaderBorderStyle}" Padding="24,20" Margin="0,0,0,24" CornerRadius="8">
            <StackPanel>
                <TextBlock Text="Completed Prescription History" 
                           FontSize="24" FontWeight="Bold" Foreground="{StaticResource DarkText}"/>
                <TextBlock Text="View and track successfully dispensed prescriptions." 
                           FontSize="14" Foreground="{StaticResource TextSecondary}" Margin="0,4,0,0"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Padding="16" Margin="0,0,0,24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox 
                         VerticalAlignment="Center"
                         Style="{StaticResource SearchInputTextBoxStyle}"
                         Tag="Search Prescription, Patient Name Or Pharmacist Name"
                         Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=LostFocus}">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" 
                                    Command="{Binding SearchCommand}"
                                    CommandParameter="{Binding Text, 
                                    RelativeSource={RelativeSource AncestorType=TextBox}}"/>
                    </TextBox.InputBindings>
                </TextBox>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="16">
                    <Button
                        Grid.Column="1"
                        Content="&#128472;"
                        Command="{Binding ReloadButtonCommand}"
                        Style="{StaticResource ReloadButtonStyle}"
                        Margin="0 0 12 0"/>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,20,0">
                        <TextBlock Text="From:" VerticalAlignment="Center" Foreground="{StaticResource TextSecondary}" Margin="0,0,8,0"/>
                        <DatePicker Style="{StaticResource StandardDatePicker}" SelectedDate="{Binding FromDate}" Width="180"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="To:" VerticalAlignment="Center" Foreground="{StaticResource TextSecondary}" Margin="0,0,8,0"/>
                        <DatePicker Style="{StaticResource StandardDatePicker}" SelectedDate="{Binding ToDate}" Width="180"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <DataGrid Grid.Row="2" 
                  Style="{StaticResource DefaultDataGridStyle}"
          ItemsSource="{Binding PrescriptionHistory}"
          x:Name="HistoryDataGrid"
          ScrollViewer.CanContentScroll="True"
          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
          ScrollViewer.VerticalScrollBarVisibility="Auto">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" 
                            Width="*"
                            ElementStyle="{StaticResource ColumnTextBlockStyle}"
                            Binding="{Binding PrescriptionID}"/>

                <DataGridTextColumn Header="Completion Time" 
                            ElementStyle="{StaticResource ColumnTextBlockStyle}"
                            Width="Auto"
                            Binding="{Binding VerifiedAt, StringFormat={}{0:dd/MM/yyyy HH:mm}}"/>

                <DataGridTemplateColumn 
                            Header="Patient" 
                            Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock 
                                           FontWeight="SemiBold"
                                           Style="{StaticResource CustomBaseTextBlockStyle}">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0} {1}">
                                            <Binding Path="MedicalRecord.Appointment.Patient.User.FirstName"/>
                                            <Binding Path="MedicalRecord.Appointment.Patient.User.LastName"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn 
                            Header="Doctor" 
                            Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock 
                           FontWeight="SemiBold"
                           Style="{StaticResource CustomBaseTextBlockStyle}">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0} {1}">
                                            <Binding Path="MedicalRecord.Appointment.Doctor.User.FirstName"/>
                                            <Binding Path="MedicalRecord.Appointment.Doctor.User.LastName"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn 
                            Header="Dispensed By" 
                            Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock 
                            FontWeight="SemiBold"
                            Style="{StaticResource CustomBaseTextBlockStyle}">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0} {1}">
                                            <Binding Path="Pharmacist.User.FirstName"/>
                                            <Binding Path="Pharmacist.User.LastName"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>

        </DataGrid>
        <Grid Grid.Row="3" Margin="0,16,0,0">
            <TextBlock Text="{Binding PaginationSummary}" VerticalAlignment="Center" Foreground="{StaticResource TextSecondary}"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="← Previous" Style="{StaticResource BtnSecondary}" Padding="12,6" Margin="0,0,10,0"
                        Command="{Binding PreviousPageCommand}"
                        IsEnabled="{Binding CanGoPrevious}"/>
                <Border Background="#009688" CornerRadius="4" Padding="12,5" Margin="0,0,10,0">
                    <TextBlock Text="{Binding CurrentPage}" 
                       Foreground="White" FontWeight="Bold"/>
                </Border>
                <Button Content="Next →" Style="{StaticResource BtnSecondary}" Padding="12,6" 
                        Command="{Binding NextPageCommand}"
                        IsEnabled="{Binding CanGoNext}"/>
            </StackPanel>
        </Grid>
        
        <Grid Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
              Grid.RowSpan="3" 
              Background="#80FFFFFF" 
              d:IsHidden="False">
            <fa:ImageAwesome 
                Icon="Spinner" 
                Spin="True" 
                Height="48" 
                Width="48" />
        </Grid>
    </Grid>
</Page>
