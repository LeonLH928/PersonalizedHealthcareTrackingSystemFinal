<Page x:Class="PersonalizedHealthcareTrackingSystemFinal.Views.PharmacistView.PharmacistHistoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:fa="http://schemas.fontawesome.io/icons/"
      xmlns:converters="clr-namespace:PersonalizedHealthcareTrackingSystemFinal.Helpers"       
      xmlns:local="clr-namespace:PersonalizedHealthcareTrackingSystemFinal.Views.PharmacistView"
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="1500"
      Title="PharmacistHistoryPage">

    <Page.Resources>
        <converters:LocalToUtcDisplayConverter x:Key="LocalToUtcDisplayConverter"/>
        <converters:StatToVisibility x:Key="StatToVisibility"/>
        <converters:UrgentToVisibility x:Key="UrgentToVisibility"/>
        <converters:ZeroStockToVisibility x:Key="ZeroStockToVisibility"/>
        <converters:LowStockToVisibility x:Key="LowStockToVisibility"/>
        <converters:NormalStockToVisibility x:Key="NormalStockToVisibility"/>
    </Page.Resources>

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Style="{StaticResource PageHeaderBorderStyle}" Padding="24,20" Margin="0,0,0,24" CornerRadius="8">
            <StackPanel>
                <TextBlock Text="Completed Prescription History" 
                           FontSize="24" FontWeight="Bold" Foreground="{StaticResource DarkText}"/>
                <TextBlock Text="View and track successfully dispensed prescriptions." 
                           FontSize="14" Foreground="{StaticResource TextSecondary}" Margin="0,4,0,0"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Padding="16" Margin="0,0,0,24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox 
                         VerticalAlignment="Center"
                         Style="{StaticResource SearchInputTextBoxStyle}"
                         Tag="Search Prescription, Patient Name Or Pharmacist Name"
                         Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=LostFocus}">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" 
                                    Command="{Binding SearchCommand}"
                                    CommandParameter="{Binding Text, 
                                    RelativeSource={RelativeSource AncestorType=TextBox}}"/>
                    </TextBox.InputBindings>
                </TextBox>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="16">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="From:" VerticalAlignment="Center" Foreground="{StaticResource TextSecondary}" Margin="0,0,8,0"/>
                        <DatePicker Style="{StaticResource StandardDatePicker}" SelectedDate="2024-01-01" Width="180"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="To:" VerticalAlignment="Center" Foreground="{StaticResource TextSecondary}" Margin="0,0,8,0"/>
                        <DatePicker Style="{StaticResource StandardDatePicker}" SelectedDate="2025-01-01" Width="180"/>
                    </StackPanel>

                    <Button Style="{StaticResource BtnSecondary}" Padding="16,8" Margin="8,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <fa:FontAwesome Icon="FileExcelOutline" Margin="0,0,8,0"/>
                            <TextBlock Text="Export Excel"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <DataGrid Grid.Row="2" 
                  Style="{StaticResource DefaultDataGridStyle}"
          ItemsSource="{Binding PrescriptionHistory}"
          x:Name="HistoryDataGrid"
          ScrollViewer.CanContentScroll="True"
          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
          ScrollViewer.VerticalScrollBarVisibility="Auto">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" 
                            Width="*"
                            ElementStyle="{StaticResource ColumnTextBlockStyle}"
                            Binding="{Binding PrescriptionID}"/>

                <DataGridTextColumn Header="Completion Time" 
                            ElementStyle="{StaticResource ColumnTextBlockStyle}"
                            Width="Auto"
                            Binding="{Binding VerifiedAt, StringFormat={}{0:dd/MM/yyyy HH:mm}}"/>

                <DataGridTemplateColumn 
                            Header="Patient" 
                            Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock 
                                           FontWeight="SemiBold"
                                           Style="{StaticResource CustomBaseTextBlockStyle}">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0} {1}">
                                            <Binding Path="MedicalRecord.Appointment.Patient.User.FirstName"/>
                                            <Binding Path="MedicalRecord.Appointment.Patient.User.LastName"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn 
                            Header="Doctor" 
                            Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock 
                           FontWeight="SemiBold"
                           Style="{StaticResource CustomBaseTextBlockStyle}">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0} {1}">
                                            <Binding Path="MedicalRecord.Appointment.Doctor.User.FirstName"/>
                                            <Binding Path="MedicalRecord.Appointment.Doctor.User.LastName"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn 
                            Header="Dispensed By" 
                            Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock 
                            FontWeight="SemiBold"
                            Style="{StaticResource CustomBaseTextBlockStyle}">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0} {1}">
                                            <Binding Path="Pharmacist.User.FirstName"/>
                                            <Binding Path="Pharmacist.User.LastName"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Actions" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="8">
                                <Button Style="{StaticResource BtnSecondary}" Content="👁️ Details" Padding="10,6" FontSize="12"/>
                                <Button Style="{StaticResource BtnSecondary}" Content="🖨️ Reprint" Padding="10,6" FontSize="12"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>

        </DataGrid>
        <Grid Grid.Row="3" Margin="0,16,0,0">
            <TextBlock Text="Showing 1-10 of 1,250 records" VerticalAlignment="Center" Foreground="{StaticResource TextSecondary}"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="← Previous" Style="{StaticResource BtnSecondary}" Padding="12,6" Margin="0,0,4,0" IsEnabled="False"/>
                <Button Content="1" Style="{StaticResource PharmacistPrimaryButton}" Padding="12,6" Margin="0,0,4,0"/>
                <Button Content="2" Style="{StaticResource BtnSecondary}" Padding="12,6" Margin="0,0,4,0"/>
                <Button Content="3" Style="{StaticResource BtnSecondary}" Padding="12,6" Margin="0,0,4,0"/>
                <Button Content="Next →" Style="{StaticResource BtnSecondary}" Padding="12,6"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
