<Page x:Class="PersonalizedHealthcareTrackingSystemFinal.Views.PharmacistView.InventoryManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:fa="http://schemas.fontawesome.io/icons/"
      xmlns:converters="clr-namespace:PersonalizedHealthcareTrackingSystemFinal.Helpers"       
      xmlns:local="clr-namespace:PersonalizedHealthcareTrackingSystemFinal.Views.PharmacistView"
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="1200"
      Title="InventoryManagementPage">
    <Page.Resources>
        <converters:LocalToUtcDisplayConverter x:Key="LocalToUtcDisplayConverter"/>
        <converters:StatToVisibility x:Key="StatToVisibility"/>
        <converters:UrgentToVisibility x:Key="UrgentToVisibility"/>
        <converters:ZeroStockToVisibility x:Key="ZeroStockToVisibility"/> 
        <converters:LowStockToVisibility x:Key="LowStockToVisibility"/>
        <converters:NormalStockToVisibility x:Key="NormalStockToVisibility"/>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{StaticResource PanelBg}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,0,0,1"
                Padding="32,24">
            <Grid>
                <StackPanel>
                    <TextBlock Text="Inventory Management" 
                               Style="{StaticResource PageHeaderTextBlockStyle}"/>
                    <TextBlock Text="Track stock, restock items, and adjust quantities."
                               Style="{StaticResource SecondaryTextTextBlockStyle}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" 
                          HorizontalAlignment="Right"
                          VerticalAlignment="Center">
                    <Button Content="📄 Export Report"
                            Margin="0,0,16,0"
                            Style="{StaticResource OutlineButtonStyle}"/>
                    <Button Style="{StaticResource PharmacistPrimaryButton}"
                            Content="+ Stock new batch"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Toolbar -->
        <Border Grid.Row="1"
                Background="{StaticResource PanelBg}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,0,0,1"
                Padding="32,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search Box -->
                <TextBox
                            Tag="Find by patient ID, drug ID, etc."
                            FontSize="14"
                            Style="{StaticResource SearchInputTextBoxStyle}"
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding SearchCommand}"/>
                    </TextBox.InputBindings>
                </TextBox>

                <!-- Status Filter -->
                <ComboBox Grid.Column="1"
                        MinWidth="150"
                        Padding="16,10"
                        BorderBrush="{StaticResource BorderColor}"
                        Margin="0,0,16,0">
                    <ComboBoxItem Content="All Statuses" IsSelected="True"/>
                    <ComboBoxItem Content="⚠️ Low Stock"/>
                    <ComboBoxItem Content="🚫 Out of Stock"/>
                </ComboBox>

                <!-- Group Filter -->
                <ComboBox Grid.Column="2"
                        MinWidth="150"
                        Padding="16,10"
                        BorderBrush="{StaticResource BorderColor}">
                    <ComboBoxItem Content="Group: All" IsSelected="True"/>
                    <ComboBoxItem Content="Antibiotics"/>
                    <ComboBoxItem Content="Cardiovascular"/>
                </ComboBox>
            </Grid>
        </Border>

        <!-- Table Content -->
        <Border Style="{StaticResource PageContentBorderStyle}"
                Grid.Row="2"
                Padding="0">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.02" 
                                BlurRadius="4" ShadowDepth="2"/>
            </Border.Effect>

            <DataGrid Style="{StaticResource DefaultDataGridStyle}"
                      ItemsSource="{Binding Medications}"
                      x:Name="InventoryDataGrid"
                      ScrollViewer.CanContentScroll="True"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                      ScrollViewer.VerticalScrollBarVisibility="Auto">
                <DataGrid.Columns>
                    <!-- ID Column -->
                    <DataGridTextColumn Header="ID" 
                                        Width="Auto"
                                        ElementStyle="{StaticResource ColumnTextBlockStyle}"
                                        Binding="{Binding MedicationID}"/>

                    <!-- Medication Info Column -->
                    <DataGridTemplateColumn 
                        Header="Medication Info" 
                        Width="Auto">
                        <DataGridTemplateColumn.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                            </Style>
                        </DataGridTemplateColumn.CellStyle>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Left" VerticalAlignment="Center">
                                    <Border Padding="10"
                                            Background="#f0fdfa"
                                            CornerRadius="8"
                                            Margin="30,0,12,0">
                                        <TextBlock Text="💊" 
                                                    FontSize="18"/>
                                    </Border>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}" 
                                                    FontWeight="SemiBold"
                                                    Style="{StaticResource CustomBaseTextBlockStyle}"/>
                                        <TextBlock Text="{Binding ActiveIngredient}"
                                                    Style="{StaticResource SecondaryTextTextBlockStyle}"
                                                    FontSize="14"
                                                    Margin="0,2,0,0"/>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Form/Unit Column -->
                    <DataGridTextColumn Header="Form / Unit" 
                                        ElementStyle="{StaticResource ColumnTextBlockStyle}"
                                        Width="*">
                        <DataGridTextColumn.Binding>
                            <MultiBinding StringFormat="{}{0} / {1}">
                                <Binding Path="Form"/>
                                <Binding Path="PackingUnit"/>
                            </MultiBinding>
                        </DataGridTextColumn.Binding>
                    </DataGridTextColumn>

                    <!-- Import Price Column -->
                    <DataGridTextColumn Header="Price" 
                                        ElementStyle="{StaticResource ColumnTextBlockStyle}"
                                        Binding="{Binding Price, StringFormat={}{0:N0}đ}"
                                        Width="*"/>
                    
                    <!-- Current Stock Column -->
                    <DataGridTemplateColumn Header="Current Stock" 
                                            Width="*">
                        <DataGridTemplateColumn.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                            </Style>
                        </DataGridTemplateColumn.CellStyle>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock Margin="0,4,0,0" FontSize="16" Foreground="{StaticResource TextSecondary}"
                                                        Visibility="{Binding StockTotalQuantity,
                                                                            Converter={StaticResource LowStockToVisibility}}">
                                                Only: 
                                                <Run Text="{Binding StockTotalQuantity}" FontWeight="Bold" Foreground="#DC2626"/> 
                                                <Run Text="{Binding Form, StringFormat={}{0}s}" FontWeight="Bold" Foreground="#DC2626"/>
                                        </TextBlock>
                                        <TextBlock Margin="0,4,0,0" FontSize="16" Foreground="#DC2626" FontWeight="Bold" Text="OUT OF STOCK (0)"
                                                   Visibility="{Binding StockTotalQuantity,
                                                                        Converter={StaticResource ZeroStockToVisibility}}"/>
                                        <TextBlock Margin="0,4,0,0" FontSize="16" FontWeight="Bold" Text="{Binding StockTotalQuantity}"
                                                   Visibility="{Binding StockTotalQuantity,
                                                                        Converter={StaticResource NormalStockToVisibility}}"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Actions Column -->
                    <DataGridTemplateColumn Header="Actions" 
                                            Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Adjust" 
                                        Style="{StaticResource AdjustButton}"
                                        Click="AdjustButton_Click"
                                        Command="{Binding DataContext.AdjustButtonCommand,
                                                          RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}"
                                        Tag="{Binding}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Slide-Over Panel -->
        <Border x:Name="SlideOverPanel"
                Grid.Row="0" Grid.RowSpan="3"
                Background="{StaticResource PanelBg}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="1,0,0,0"
                HorizontalAlignment="Right"
                Visibility="Collapsed">
            <Border.RenderTransform>
                <TranslateTransform x:Name="SlideTransform" X="400"/>
            </Border.RenderTransform>
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.1" 
                                BlurRadius="25" ShadowDepth="-5" Direction="180"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Panel Header -->
                <Border Grid.Row="0" 
                          Background="#f8fafc"
                          BorderBrush="{StaticResource BorderColor}"
                          BorderThickness="0,0,0,1"
                          Padding="24">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Adjusting stock for:" 
                                     FontSize="13"
                                     Foreground="{StaticResource TextSecondary}"/>
                            <TextBlock x:Name="PanelMedicationName"
                                     FontSize="18"
                                     FontWeight="SemiBold"
                                     Foreground="{StaticResource TextDark}"
                                     Margin="0,4,0,0">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0} ({1})">
                                        <Binding Path="SelectedMedication.Name"/>
                                        <Binding Path="SelectedMedication.MedicationID"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </StackPanel>

                        <Button Content="×" 
                                Grid.Column="2"
                                Style="{StaticResource CloseButtonStyle}"
                                FontSize="24"
                                Width="Auto"
                                Height="Auto"
                                VerticalAlignment="Top"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="ClosePanel_Click"/>
                    </Grid>
                </Border>

                <!-- Panel Body -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="24">
                    <StackPanel>
                        <!-- Current Stock Display -->
                        <Border Background="#f0fdfa"
                              BorderBrush="#ccfbf1"
                              BorderThickness="1"
                              CornerRadius="12"
                              Padding="20"
                              Margin="0,0,0,24">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="Current Stock" 
                                         FontWeight="SemiBold"
                                         Foreground="{StaticResource TextSecondary}"
                                         HorizontalAlignment="Center"/>
                                <TextBlock x:Name="CurrentStockValue"
                                         Text="{Binding SelectedMedication.StockTotalQuantity}" 
                                         FontSize="40"
                                         FontWeight="Bold"
                                         Foreground="{StaticResource SidebarActive}"
                                         HorizontalAlignment="Center"
                                         Margin="0,8"/>
                                <TextBlock x:Name="CurrentStockUnit"
                                         Text="{Binding SelectedMedication.Form, StringFormat={}{0}s}" 
                                         FontWeight="SemiBold"
                                         Foreground="{StaticResource TextSecondary}"
                                         HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Adjustment Type -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Adjustment Type" 
                                     FontWeight="SemiBold"
                                     Foreground="{StaticResource TextDark}"
                                     Margin="0,0,0,8"/>

                            <Grid Background="#f1f5f9" Height="48">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <RadioButton x:Name="RadioAdd"
                                           Grid.Column="0"
                                           Content="+ Add Stock"
                                           GroupName="AdjType"
                                           IsChecked="True"
                                           HorizontalAlignment="Stretch"
                                           VerticalAlignment="Stretch"
                                           HorizontalContentAlignment="Center"
                                           VerticalContentAlignment="Center"
                                           FontWeight="SemiBold"
                                           Cursor="Hand">
                                    <RadioButton.Template>
                                        <ControlTemplate TargetType="RadioButton">
                                            <Border x:Name="Border"
                                                  Background="Transparent"
                                                  BorderBrush="Transparent"
                                                  BorderThickness="1"
                                                  CornerRadius="6"
                                                  Margin="4">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter TargetName="Border" Property="Background" Value="White"/>
                                                    <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource SidebarActive}"/>
                                                    <Setter Property="Foreground" Value="{StaticResource SidebarActive}"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </RadioButton.Template>
                                </RadioButton>

                                <RadioButton x:Name="RadioRemove"
                                           Grid.Column="1"
                                           Content="- Remove/Discard"
                                           GroupName="AdjType"
                                           HorizontalAlignment="Stretch"
                                           VerticalAlignment="Stretch"
                                           HorizontalContentAlignment="Center"
                                           VerticalContentAlignment="Center"
                                           FontWeight="SemiBold"
                                           Cursor="Hand">
                                    <RadioButton.Template>
                                        <ControlTemplate TargetType="RadioButton">
                                            <Border x:Name="Border"
                                                  Background="Transparent"
                                                  BorderBrush="Transparent"
                                                  BorderThickness="1"
                                                  CornerRadius="6"
                                                  Margin="4">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter TargetName="Border" Property="Background" Value="White"/>
                                                    <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource SidebarActive}"/>
                                                    <Setter Property="Foreground" Value="{StaticResource SidebarActive}"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </RadioButton.Template>
                                </RadioButton>
                            </Grid>
                        </StackPanel>

                        <!-- Quantity Input -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Change Quantity (Tablets)" 
                                     FontWeight="SemiBold"
                                     Foreground="{StaticResource TextDark}"
                                     Margin="0,0,0,8"/>
                            <TextBox x:Name="QuantityInput"
                                   Padding="12"
                                   BorderBrush="{StaticResource BorderColor}"
                                   BorderThickness="1"
                                   FontWeight="Bold"
                                   FontSize="17"
                                   Foreground="{StaticResource SidebarActive}">
                                <TextBox.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="8"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                        </StackPanel>

                        <!-- Reason Notes -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Reason / Notes (Saved to Log)" 
                                     FontWeight="SemiBold"
                                     Foreground="{StaticResource TextDark}"
                                     Margin="0,0,0,8"/>
                            <TextBox x:Name="ReasonInput"
                                   Height="80"
                                   Padding="12"
                                   BorderBrush="{StaticResource BorderColor}"
                                   BorderThickness="1"
                                   TextWrapping="Wrap"
                                   AcceptsReturn="True"
                                   VerticalScrollBarVisibility="Auto">
                                <TextBox.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="8"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                        </StackPanel>

                        <!-- Document Input -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Related Document (Optional)" 
                                     FontWeight="SemiBold"
                                     Foreground="{StaticResource TextDark}"
                                     Margin="0,0,0,8"/>
                            <TextBox x:Name="DocumentInput"
                                   Padding="12"
                                   BorderBrush="{StaticResource BorderColor}"
                                   BorderThickness="1">
                                <TextBox.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="8"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                        </StackPanel>
                        <!-- Panel Footer -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button Content="Cancel" 
                                    Style="{StaticResource AdjustButton}"
                                    Padding="12"
                                    Margin="0,0,16,0"
                                    Click="ClosePanel_Click"/>
                            <Button Style="{StaticResource PharmacistPrimaryButton}"
                                    Grid.Column="1"
                                    Padding="24,12"
                                    Click="SaveAdjustment_Click"
                                    FontSize="16"
                                    Content="💾 Save Adjustment"/>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Page>
