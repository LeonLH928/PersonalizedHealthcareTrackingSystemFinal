<Page x:Class="PersonalizedHealthcareTrackingSystemFinal.Views.PharmacistView.PharmacistCancelledPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PersonalizedHealthcareTrackingSystemFinal.Views.PharmacistView" xmlns:fa="http://schemas.fontawesome.io/icons/"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PharmacistCancelledPage">

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Style="{StaticResource PageHeaderBorderStyle}" Padding="24,20" Margin="0,0,0,24" CornerRadius="8">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="🚫" FontSize="24" Margin="0,0,12,0"/>
                    <TextBlock Text="Cancelled Prescriptions" 
                               FontSize="24" FontWeight="Bold" Foreground="{StaticResource DarkText}"/>
                </StackPanel>
                <TextBlock Text="Track cancelled orders and view cancellation reasons." 
                           FontSize="14" Foreground="{StaticResource TextSecondary}" Margin="40,4,0,0"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Padding="16" Margin="0,0,0,24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Border BorderBrush="{StaticResource LightBorder}" BorderThickness="1" CornerRadius="8" Padding="8,0" HorizontalAlignment="Left" Width="300">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <fa:FontAwesome Icon="Search" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center" Margin="8,0"/>
                        <TextBox Grid.Column="1" BorderThickness="0" Background="Transparent" 
                                 VerticalContentAlignment="Center" Padding="4"
                                 Text="Search by Rx ID, Patient..."/>
                    </Grid>
                </Border>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="16">
                    <ComboBox Width="180" Padding="8" SelectedIndex="0">
                        <ComboBoxItem Content="Cancelled By: All"/>
                        <ComboBoxItem Content="👨‍⚕️ Doctor"/>
                        <ComboBoxItem Content="⚙️ System (Auto)"/>
                        <ComboBoxItem Content="👤 Patient Request"/>
                    </ComboBox>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="From:" VerticalAlignment="Center" Foreground="{StaticResource TextSecondary}" Margin="0,0,8,0"/>
                        <DatePicker Style="{StaticResource StandardDatePicker}" SelectedDate="2023-10-01" Width="130"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="To:" VerticalAlignment="Center" Foreground="{StaticResource TextSecondary}" Margin="0,0,8,0"/>
                        <DatePicker Style="{StaticResource StandardDatePicker}" SelectedDate="2023-10-27" Width="130"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <DataGrid Grid.Row="2" Style="{StaticResource InventoryDataGrid}" RowHeight="70">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Rx ID" Binding="{Binding Id}" Width="100" FontWeight="Bold" Foreground="{StaticResource DangerColor}"/>

                <DataGridTemplateColumn Header="Cancellation Time" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="{Binding Date}" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding Time}" FontSize="12" Foreground="{StaticResource TextSecondary}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Patient" Width="200">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="{Binding PatientName}" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding PatientId}" FontSize="12" Foreground="{StaticResource TextSecondary}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Prescriber" Binding="{Binding DoctorName}" Width="180"/>

                <DataGridTemplateColumn Header="Reason" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Reason}" FontWeight="SemiBold" TextWrapping="Wrap" VerticalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Cancelled By" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border Background="#f1f5f9" CornerRadius="4" Padding="8,4" HorizontalAlignment="Left">
                                <TextBlock Text="{Binding CancelledBy}" FontSize="12" FontWeight="SemiBold" Foreground="{StaticResource TextSecondary}"/>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Status" Width="140">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource StockBadgeOut}" Background="#fef2f2" HorizontalAlignment="Left">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="✕" Foreground="#b91c1c" FontWeight="Bold" Margin="0,0,4,0"/>
                                    <TextBlock Text="Cancelled" Foreground="#b91c1c" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Actions" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Style="{StaticResource BtnSecondary}" Content="👁️ Details" Padding="10,6" FontSize="12"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <Grid Grid.Row="3" Margin="0,16,0,0">
            <TextBlock Text="Showing 1-3 of 25 cancelled records" VerticalAlignment="Center" Foreground="{StaticResource TextSecondary}"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="← Previous" Style="{StaticResource BtnSecondary}" Padding="12,6" Margin="0,0,4,0" IsEnabled="False"/>
                <Button Content="1" Style="{StaticResource BtnPrimary}" Background="{StaticResource DangerColor}" Padding="12,6" Margin="0,0,4,0"/>
                <Button Content="2" Style="{StaticResource BtnSecondary}" Padding="12,6" Margin="0,0,4,0"/>
                <Button Content="Next →" Style="{StaticResource BtnSecondary}" Padding="12,6"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>