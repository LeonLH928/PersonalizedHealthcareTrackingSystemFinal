        <DataGrid Grid.Row="2" 
                    Style="{StaticResource DefaultDataGridStyle}"
                    ItemsSource="{Binding PrescriptionCancelled}"
                    x:Name="CancelledDataGrid"
                    ScrollViewer.CanContentScroll="True"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    ScrollViewer.VerticalScrollBarVisibility="Auto">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" 
                    Width="*"
                    ElementStyle="{StaticResource ColumnTextBlockStyle}"
                    Binding="{Binding PrescriptionID}"/>

                <DataGridTextColumn Header="Cancellation Time" 
                    ElementStyle="{StaticResource ColumnTextBlockStyle}"
                    Width="*"
                    Binding="{Binding CancelledAt, StringFormat={}{0:dd/MM/yyyy HH:mm}}"/>

                <DataGridTemplateColumn 
                    Header="Patient" 
                    Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock 
                                   FontWeight="SemiBold"
                                   Style="{StaticResource CustomBaseTextBlockStyle}">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0} {1}">
                                            <Binding Path="MedicalRecord.Appointment.Patient.User.FirstName"/>
                                            <Binding Path="MedicalRecord.Appointment.Patient.User.LastName"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn 
                    Header="Doctor" 
                    Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock 
                   FontWeight="SemiBold"
                   Style="{StaticResource CustomBaseTextBlockStyle}">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0} {1}">
                                            <Binding Path="MedicalRecord.Appointment.Doctor.User.FirstName"/>
                                            <Binding Path="MedicalRecord.Appointment.Doctor.User.LastName"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Reason" 
                    Width="*"
                    ElementStyle="{StaticResource ColumnTextBlockStyle}"
                    Binding="{Binding Reason}"/>

                <DataGridTemplateColumn 
                    Header="Cancelled By" 
                    Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock 
                                    FontWeight="SemiBold"
                                    Style="{StaticResource CustomBaseTextBlockStyle}">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0} {1}">
                                            <Binding Path="Pharmacist.User.FirstName"/>
                                            <Binding Path="Pharmacist.User.LastName"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <Grid Grid.Row="3" Margin="0,16,0,0">
            <TextBlock Text="{Binding PaginationSummary}" VerticalAlignment="Center" Foreground="{StaticResource TextSecondary}"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="← Previous" Style="{StaticResource BtnSecondary}" Padding="12,6" Margin="0,0,10,0"
                        Command="{Binding PreviousPageCommand}"
                        IsEnabled="{Binding CanGoPrevious}"/>
                <Border Background="{StaticResource DangerColor}" CornerRadius="4" Padding="12,5" Margin="0,0,10,0">
                    <TextBlock Text="{Binding CurrentPage}" 
                       Foreground="White" FontWeight="Bold"/>
                </Border>
                <Button Content="Next →" Style="{StaticResource BtnSecondary}" Padding="12,6" 
                        Command="{Binding NextPageCommand}"
                        IsEnabled="{Binding CanGoNext}"/>
            </StackPanel>
        </Grid>
        <Grid Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
              Grid.RowSpan="3" 
              Background="#80FFFFFF" 
              d:IsHidden="False">
            <fa:ImageAwesome 
                Icon="Spinner" 
                Spin="True" 
                Height="48" 
                Width="48" />
        </Grid>

    </Grid>
</Page>