<Window x:Class="PersonalizedHealthcareTrackingSystemFinal.Views.DoctorView.SeeMedicalRecordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PersonalizedHealthcareTrackingSystemFinal.Views.DoctorView"
        mc:Ignorable="d"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource WindowPopup}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid>
            <TextBlock Text="Medical records" 
                       Style="{StaticResource PageHeaderTextBlockStyle}"
                       VerticalAlignment="Center"
                       Margin="20,0,0,0"/>
            <StackPanel
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">

                <Button
                    Style="{StaticResource CloseWindowButton}"
                    Command="{Binding CloseWindowButtonCommand}"
                    Content="❌"/>

            </StackPanel>
        </Grid>
        <ScrollViewer Grid.Row="1"
                      HorizontalScrollBarVisibility="Disabled"
                      VerticalScrollBarVisibility="Auto">
            
        <ItemsControl ItemsSource="{Binding Records}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Background="White" 
                                        BorderBrush="#0078D4" 
                                        BorderThickness="0,2,0,0" 
                                        CornerRadius="10" 
                                        VerticalAlignment="Top"
                                        Margin="20">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="20" Color="#DDDDDD" ShadowDepth="5" Opacity="0.5"/>
                        </Border.Effect>
                        <Grid Margin="20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Border Grid.Column="0" 
                                                    BorderBrush="#0078D4" 
                                                    BorderThickness="2" 
                                                    CornerRadius="12" 
                                                    Width="60" Height="60"
                                                    Margin="0,0,15,0">
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding Record.Appointment.AppointmentDateTime,
                                                                      StringFormat={}{0:dd}}" 
                                                               FontWeight="Bold" FontSize="22" Foreground="#0078D4" HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding Record.Appointment.AppointmentDateTime,
                                                                      StringFormat={}{0:MMM}}" 
                                                               FontSize="12" Foreground="#666666" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Record.Appointment.ChiefComplaint}" 
                                                           FontSize="18" 
                                                           FontWeight="SemiBold" 
                                                           Foreground="Black"/>
                                    <TextBlock Style="{StaticResource SecondaryTextTextBlockStyle}"
                                                           Margin="0,2,0,0">
                                        <TextBlock.Text>
                                            <MultiBinding StringFormat="{}Dr. {0} {1} • Medicare">
                                                <Binding Path="Record.Appointment.Doctor.User.FirstName"/>
                                                <Binding Path="Record.Appointment.Doctor.User.LastName"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </StackPanel>
                                <ToggleButton x:Name="DetailsToggle"
                                                          Grid.Column="2"
                                                          VerticalAlignment="Top"
                                                          Margin="0,5,0,0"
                                                          Cursor="Hand"
                                                          Background="Transparent"
                                                          BorderThickness="0">
                                    <ToggleButton.Style>
                                        <Style TargetType="ToggleButton">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ToggleButton">
                                                        <StackPanel Orientation="Horizontal">
                                                            <Path x:Name="Arrow" 
                                                                              Data="M 0 0 L 4 4 L 8 0" 
                                                                              Stroke="#0078D4" 
                                                                              StrokeThickness="2" 
                                                                              VerticalAlignment="Center" 
                                                                              Margin="0,2,5,0"
                                                                              RenderTransformOrigin="0.5,0.5">
                                                                <Path.RenderTransform>
                                                                    <RotateTransform Angle="0"/>
                                                                </Path.RenderTransform>
                                                            </Path>
                                                            <TextBlock Text="Details" 
                                                                                   Foreground="#0078D4" 
                                                                                   FontWeight="SemiBold"
                                                                                   FontSize="13"/>
                                                        </StackPanel>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsChecked" Value="True">
                                                                <Trigger.EnterActions>
                                                                    <BeginStoryboard>
                                                                        <Storyboard>
                                                                            <DoubleAnimation Storyboard.TargetName="Arrow"
                                                                                                         Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                                                                                                         To="180" Duration="0:0:0.2"/>
                                                                        </Storyboard>
                                                                    </BeginStoryboard>
                                                                </Trigger.EnterActions>
                                                                <Trigger.ExitActions>
                                                                    <BeginStoryboard>
                                                                        <Storyboard>
                                                                            <DoubleAnimation Storyboard.TargetName="Arrow"
                                                                                                         Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                                                                                                         To="0" Duration="0:0:0.2"/>
                                                                        </Storyboard>
                                                                    </BeginStoryboard>
                                                                </Trigger.ExitActions>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ToggleButton.Style>
                                </ToggleButton>
                            </Grid>
                            <Grid Grid.Row="1" x:Name="ContentSection" MaxHeight="0" ClipToBounds="True">
                                <Grid Margin="0,20,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1.5*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Margin="0,0,20,0">
                                        <TextBlock Text="DIAGNOSIS" FontSize="11" FontWeight="Bold" Foreground="Gray"/>
                                        <TextBlock Text="{Binding Record.Diagnosis}" 
                                                               Foreground="#0078D4" FontWeight="Bold" FontSize="14" Margin="0,5,0,20"/>
                                        <TextBlock Text="TREATMENT PLAN" FontSize="11" FontWeight="Bold" Foreground="Gray"/>
                                        <TextBlock Text="{Binding Record.TreatmentPlan}" 
                                                   TextWrapping="Wrap" 
                                                   Foreground="#444444" 
                                                   FontSize="13" 
                                                   LineHeight="20"
                                                   Margin="0,5,0,0"/>
                                    </StackPanel>
                                    <Border Background="#F8F9FA" CornerRadius="8" Padding="15"
                                            Grid.Column="1">
                                        <StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                                <TextBlock Text="{Binding Prescription.PrescriptionID, StringFormat={}Prescription (#{0})}" FontWeight="Bold" FontSize="12" Foreground="Black"/>
                                            </StackPanel>
                                            <ItemsControl ItemsSource="{Binding Items}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Margin="0,0,0,10">
                                                            <StackPanel Orientation="Horizontal">
                                                                <Path Data="M3,6 A3,3 0 1 1 3,0 L9,0 A3,3 0 1 1 9,6 Z" Fill="Black" Stretch="Uniform" Height="10" Width="15" Margin="0,0,5,0"/>
                                                                <TextBlock Text="{Binding Medication.Name }" FontWeight="Bold" FontSize="13"/>
                                                            </StackPanel>
                                                            <TextBlock Foreground="Gray" FontSize="11" Margin="20,2,0,0"
                                                                       TextWrapping="Wrap">
                                                                <TextBlock.Text>
                                                                    <MultiBinding StringFormat="{}{0} {1}s in {2} days ({3}) • {4}">
                                                                        <Binding Path="Quantity"/>
                                                                        <Binding Path="Medication.Form"/>
                                                                        <Binding Path="DurationDays"/>
                                                                        <Binding Path="Frequency"/>
                                                                        <Binding Path="Instruction"/>
                                                                    </MultiBinding>
                                                                </TextBlock.Text>
                                                            </TextBlock>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </Grid>
                        </Grid>
                        <Border.Triggers>
                            <EventTrigger RoutedEvent="ToggleButton.Checked" SourceName="DetailsToggle">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="ContentSection" 
                                                                     Storyboard.TargetProperty="MaxHeight"
                                                                     To="300" 
                                                                     Duration="0:0:0.4">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="ToggleButton.Unchecked" SourceName="DetailsToggle">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="ContentSection" 
                                                                     Storyboard.TargetProperty="MaxHeight"
                                                                     To="0" 
                                                                     Duration="0:0:0.3">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Border.Triggers>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        </ScrollViewer>
        <Grid Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
              Grid.RowSpan="2" 
              Background="#80FFFFFF" 
              d:IsHidden="False">
            <fa:ImageAwesome 
                Icon="Spinner" 
                Spin="True" 
                Height="48" 
                Width="48"/>
        </Grid>
    </Grid>
</Window>
