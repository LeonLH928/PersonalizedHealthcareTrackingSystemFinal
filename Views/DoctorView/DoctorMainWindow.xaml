<Window x:Class="PersonalizedHealthcareTrackingSystemFinal.Views.DoctorView.DoctorMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:local="clr-namespace:PersonalizedHealthcareTrackingSystemFinal.Views.DoctorView"
        mc:Ignorable="d"
        Height="600" Width="1000" WindowState="Maximized">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="8*" MinWidth="500"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Background="#141C24">
            <Grid.RowDefinitions>
                <RowDefinition Height="150"/>
                <RowDefinition Height="*" />
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                    Padding="15"
                    Background="#141C24"
                    BorderThickness="0,0,0,1"
                    BorderBrush="#1A252F" HorizontalAlignment="Stretch">
                <Image Source="/Resources/Images/logo.png"                       
                       HorizontalAlignment="Center"
                       Margin="0,-15,0,-16" Width="200"
                       />
            </Border>

            <ListBox x:Name="Sidebar"
                     Grid.Row="1"
                     Background="Transparent"
                     Foreground="White"
                     BorderThickness="0"
                     FontSize="18" SelectionChanged="Sidebar_SelectionChanged">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Padding" Value="15"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#34495E"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3E5060"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListBox.ItemContainerStyle>

                <ListBoxItem Tag="Dashboard">
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome 
                            Icon="Dashboard" 
                            Width="20" 
                            Height="20" 
                            Margin="0,0,10,0" 
                            VerticalAlignment="Center" 
                            Foreground="White"/>

                        <TextBlock Text="Dashboard"/>
                    </StackPanel>
                </ListBoxItem>

                <ListBoxItem Tag="Booking">
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome 
                            Icon="AlignJustify" 
                            Width="20" 
                            Height="20" 
                            Margin="0,0,10,0" 
                            VerticalAlignment="Center" 
                            Foreground="White"/>
                        <TextBlock Text="Patient Queue"/>
                    </StackPanel>
                </ListBoxItem>

                <ListBoxItem Tag="Settings">
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Icon="Cog" Width="20" Height="20" Margin="0,0,10,0" VerticalAlignment="Center" Foreground="White"/>
                        <TextBlock Text="Settings"/>
                    </StackPanel>
                </ListBoxItem>

            </ListBox>

            <Border Grid.Row="2"
                    Background="#1A252F"
                    Padding="12"
                    BorderThickness="0,1,0,0"
                    BorderBrush="#3A4A58">
                <DockPanel LastChildFill="False" VerticalAlignment="Center">
                    <Ellipse Width="46" Height="46"
                             DockPanel.Dock="Left" 
                             Stroke="White" StrokeThickness="1">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="/Resources/Images/avatar.png"/>
                        </Ellipse.Fill>
                    </Ellipse>

                    <StackPanel Orientation="Vertical" Margin="10,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="Nguyễn Đại Hưng"
                                   Foreground="White"
                                   FontWeight="SemiBold"
                                   FontSize="14"/>
                        <TextBlock Text="hun9nd@gmail.com"
                                   Foreground="#BDC3C7"
                                   FontSize="11"
                                   TextTrimming="CharacterEllipsis"
                                   Width="150"/>
                    </StackPanel>
                </DockPanel>
            </Border>
        </Grid>

        <Frame x:Name="DoctorMainContent"
               Grid.Column="1"
               NavigationUIVisibility="Hidden"
               Background="#ECF0F1"/>
    </Grid>
</Window>
