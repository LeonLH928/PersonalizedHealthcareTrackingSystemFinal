<Page x:Class="PersonalizedHealthcareTrackingSystemFinal.Views.DoctorView.DoctorPharmacyInventoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PersonalizedHealthcareTrackingSystemFinal.Views.DoctorView"
      mc:Ignorable="d" 
      xmlns:fa="http://schemas.fontawesome.io/icons/"
      xmlns:converters="clr-namespace:PersonalizedHealthcareTrackingSystemFinal.Helpers"       
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="DoctorPharmacyInventoryPage">
    <Page.Resources>
        <converters:ZeroStockToVisibility x:Key="ZeroStockToVisibility"/>
        <converters:LowStockToVisibility x:Key="LowStockToVisibility"/>
        <converters:NormalStockToVisibility x:Key="NormalStockToVisibility"/>
        <converters:PascalCaseToSpaceConverter x:Key="PascalCaseToSpaceConverter"/>
    </Page.Resources>
    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="Pharmacy Inventory" 
                       FontSize="24" FontWeight="Bold" Foreground="{StaticResource DarkText}"/>
            <TextBlock Text="{Binding TotalItems,
                       StringFormat={}Check real-time stock status and medication details for {0} items.}" 
                       FontSize="14" Foreground="{StaticResource TextSecondary}" Margin="0,4,0,0"/>
        </StackPanel>

        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Padding="16" Margin="0,0,0,24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox Margin="0 0 10 0"
                    Style="{StaticResource SearchInputTextBoxStyle}"
                    Tag="Search by name, ID,..."
                    Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=LostFocus}">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" 
                            Command="{Binding SearchCommand}"
                            CommandParameter="{Binding Text, 
                                                       RelativeSource={RelativeSource AncestorType=TextBox}}"/>
                    </TextBox.InputBindings>
                </TextBox>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <ComboBox Width="180" Padding="8" Style="{StaticResource FormComboBox}"
                              SelectedValuePath="Content"
                              SelectedValue="{Binding SelectedCategory}">
                        <ComboBoxItem Content="All Categories" IsSelected="True"/>
                        <ComboBoxItem Content="Cardiovascular"/>
                        <ComboBoxItem Content="Antibiotics"/>
                        <ComboBoxItem Content="Painkillers"/>
                    </ComboBox>

                    <ComboBox Width="180" Padding="8" Style="{StaticResource FormComboBox}"
                              SelectedValuePath="Content"
                              SelectedValue="{Binding SelectedStatus}">
                        <ComboBoxItem Content="Status: All" IsSelected="True"/>
                        <ComboBoxItem Content="✅ Available"/>
                        <ComboBoxItem Content="⚠️ Low Stock"/>
                        <ComboBoxItem Content="🚫 Out of Stock"/>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </Border>

        <DataGrid Style="{StaticResource DefaultDataGridStyle}"
                  Grid.Row="2"
                  ItemsSource="{Binding Medications}"
                  x:Name="InventoryDataGrid"
                  ScrollViewer.CanContentScroll="True"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  ScrollViewer.VerticalScrollBarVisibility="Auto">
            <DataGrid.Columns>
                <!-- ID Column -->
                <DataGridTextColumn Header="ID" 
                                    Width="Auto"
                                    ElementStyle="{StaticResource ColumnTextBlockStyle}"
                                    Binding="{Binding MedicationID}"/>

                <!-- Medication Info Column -->
                <DataGridTemplateColumn 
                                    Header="Name &amp; Active ingredient" 
                                    Width="Auto">
                    <DataGridTemplateColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        </Style>
                    </DataGridTemplateColumn.CellStyle>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Left" VerticalAlignment="Center">
                                <Border Padding="10"
                                        Background="#f0fdfa"
                                        CornerRadius="8"
                                        Margin="30,0,12,0">
                                    <TextBlock Text="💊" 
                                               FontSize="18"/>
                                </Border>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Name}" 
                                                    FontWeight="SemiBold"
                                                    Style="{StaticResource CustomBaseTextBlockStyle}"/>
                                    <TextBlock Text="{Binding ActiveIngredient}"
                                                    Style="{StaticResource SecondaryTextTextBlockStyle}"
                                                    FontSize="14"
                                                    Margin="0,2,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Category Column -->
                <DataGridTextColumn Header="Category" 
                                    ElementStyle="{StaticResource ColumnTextBlockStyle}"
                                    Width="*"
                                    Binding="{Binding Category, StringFormat={}{0},
                                                      Converter={StaticResource PascalCaseToSpaceConverter}}"/>

                <!-- Form/Unit Column -->
                <DataGridTextColumn Header="Form / Unit" 
                                    ElementStyle="{StaticResource ColumnTextBlockStyle}"
                                    Width="*">
                    <DataGridTextColumn.Binding>
                        <MultiBinding StringFormat="{}{0} / {1}">
                            <Binding Path="Form"/>
                            <Binding Path="PackingUnit"/>
                        </MultiBinding>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>
                

                <!-- Price Column -->
                <DataGridTextColumn Header="Price" 
                                    ElementStyle="{StaticResource ColumnTextBlockStyle}"
                                    Binding="{Binding Price, StringFormat={}{0:N0}đ}"
                                    Width="*"/>

                <!-- Current Stock Column -->
                <DataGridTemplateColumn Header="Current Stock" 
                                        Width="*">
                    <DataGridTemplateColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                        </Style>
                    </DataGridTemplateColumn.CellStyle>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock Margin="0,4,0,0" FontSize="16" Foreground="{StaticResource TextSecondary}"
                                               Visibility="{Binding StockTotalQuantity,
                                                                    Converter={StaticResource LowStockToVisibility}}">
                                        Only: 
                                        <Run Text="{Binding StockTotalQuantity}" FontWeight="Bold" Foreground="#DC2626"/> 
                                        <Run Text="{Binding Form, StringFormat={}{0}s}" FontWeight="Bold" Foreground="#DC2626"/>
                                    </TextBlock>
                                    <TextBlock Margin="0,4,0,0" FontSize="16" Foreground="#DC2626" FontWeight="Bold" Text="OUT OF STOCK (0)"
                                               Visibility="{Binding StockTotalQuantity,
                                                                    Converter={StaticResource ZeroStockToVisibility}}"/>
                                    <TextBlock Margin="0,4,0,0" FontSize="16" FontWeight="Bold" Text="{Binding StockTotalQuantity}"
                                               Visibility="{Binding StockTotalQuantity,
                                                                    Converter={StaticResource NormalStockToVisibility}}"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Grid Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
              Grid.RowSpan="3" 
              Background="#80FFFFFF" 
              d:IsHidden="False">
            <fa:ImageAwesome 
                Icon="Spinner" 
                Spin="True" 
                Height="48" 
                Width="48"/>
        </Grid>
    </Grid>
</Page>
