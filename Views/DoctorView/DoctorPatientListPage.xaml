<Page x:Class="PersonalizedHealthcareTrackingSystemFinal.Views.DoctorView.DoctorPatientListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PersonalizedHealthcareTrackingSystemFinal.Views.DoctorView"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DoctorPatientListPage">

    <Grid Background="{StaticResource BgLight}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Page Header -->
        <Border Grid.Row="0" Style="{StaticResource PageHeaderBorderStyle}" Padding="24 32">
            <StackPanel>
                <TextBlock Text="Patient List" FontSize="24" 
                         FontWeight="Bold" Foreground="{StaticResource TextDark}"/>
                <TextBlock Text="Manage medical records and monitor health status of 1,250 patients." 
                         FontSize="14" Foreground="{StaticResource TextSecondary}" 
                         Margin="0 4 0 0"/>
            </StackPanel>
        </Border>

        <!-- Toolbar -->
        <Border Grid.Row="1" Style="{StaticResource PageHeaderBorderStyle}" 
                Padding="16 32" BorderThickness="0 1 0 1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search -->
                <TextBox Margin="0 0 12 0"
                         Style="{StaticResource SearchInputTextBoxStyle}"
                         Tag="Search by name, ID, or phone number..."/>

                <!-- Filters & Add Button -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <ComboBox Style="{StaticResource FormComboBox}" Width="200" 
                              Margin="0 0 12 0">
                        <ComboBoxItem Content="All Status" IsSelected="True"/>
                        <ComboBoxItem Content="Chronic Disease"/>
                        <ComboBoxItem Content="Need Follow-up"/>
                        <ComboBoxItem Content="Stable"/>
                    </ComboBox>
                    <ComboBox Style="{StaticResource FormComboBox}" Width="180"
                              Margin="0 0 12 0">
                        <ComboBoxItem Content="Sort: Latest" IsSelected="True"/>
                        <ComboBoxItem Content="Sort: Name A-Z"/>
                    </ComboBox>
                    <Button Style="{StaticResource BtnPrimary}" Padding="16 10">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="＋" Margin="0 0 8 0" FontSize="16"/>
                            <TextBlock Text="Add New Patient"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Table Container -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Padding="32">
            <Border Style="{StaticResource WidgetBorderStyle}">
                <StackPanel>
                    <!-- Patient Row 1 -->
                    <Border BorderBrush="{StaticResource BorderColor}" 
                          BorderThickness="0 0 0 1" Padding="24 20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*" MinWidth="300"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="250"/>
                                <ColumnDefinition Width="250"/>
                            </Grid.ColumnDefinitions>

                            <!-- ID -->
                            <TextBlock Grid.Column="0" Text="P-123456" 
                                     FontWeight="Bold" FontSize="14"
                                     Foreground="{StaticResource PrimaryColor}"
                                     VerticalAlignment="Center"/>

                            <!-- Patient Info -->
                            <Grid Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Avatar -->
                                <Border Grid.Column="0" Width="48" Height="48" 
                                      Background="#fee2e2" CornerRadius="24" 
                                      Margin="0 0 16 0">
                                    <TextBlock Text="NA" FontSize="18" FontWeight="Bold"
                                             Foreground="{StaticResource DangerColor}"
                                             HorizontalAlignment="Center" 
                                             VerticalAlignment="Center"/>
                                </Border>

                                <!-- Info -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="John Smith" FontWeight="SemiBold"
                                             FontSize="15" Foreground="{StaticResource TextDark}"/>
                                    <TextBlock FontSize="13" 
                                             Foreground="{StaticResource TextSecondary}"
                                             Margin="0 4 0 0">
                                        <Run Text="Male •"/>
                                        <Run Text="45 years old •"/>
                                        <Run Text="Blood Type: A+"/>
                                    </TextBlock>
                                </StackPanel>
                            </Grid>

                            <!-- Contact -->
                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                <TextBlock FontSize="14" Margin="0 0 0 4">
                                    <Run Text="📞" Foreground="{StaticResource TextSecondary}"/>
                                    <Run Text="0901234567"/>
                                </TextBlock>
                                <TextBlock FontSize="14" 
                                         Foreground="{StaticResource TextSecondary}">
                                    <Run Text="✉️"/>
                                    <Run Text="john@email.com"/>
                                </TextBlock>
                            </StackPanel>

                            <!-- Last Visit -->
                            <StackPanel Grid.Column="3" VerticalAlignment="Center">
                                <TextBlock Text="10/27/2023 (Today)" FontWeight="SemiBold"
                                         FontSize="14" Foreground="{StaticResource TextDark}"/>
                                <TextBlock Text="Cardiology Follow-up" FontSize="13"
                                         Foreground="{StaticResource TextSecondary}"
                                         Margin="0 4 0 0"/>
                            </StackPanel>

                            <!-- Status -->
                            <StackPanel Grid.Column="4" VerticalAlignment="Center">
                                <Border Background="#fee2e2" CornerRadius="20" 
                                      Padding="8 4" HorizontalAlignment="Left">
                                    <TextBlock Text="⚠️ Chronic: Hypertension" 
                                             Foreground="{StaticResource DangerColor}"
                                             FontSize="12" FontWeight="SemiBold"/>
                                </Border>
                                <TextBlock Text="Allergy: Penicillin" FontSize="12"
                                         Foreground="{StaticResource DangerColor}"
                                         Margin="0 6 0 0"/>
                            </StackPanel>

                            <!-- Actions -->
                            <StackPanel Grid.Column="5" Orientation="Horizontal" 
                                      VerticalAlignment="Center">
                                <Button Style="{StaticResource BtnSecondary}" 
                                      Padding="10 8" Margin="0 0 8 0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="📋" Margin="0 0 6 0"/>
                                        <TextBlock Text="Record"/>
                                    </StackPanel>
                                </Button>
                                <Button Style="{StaticResource BtnSecondary}" 
                                      Padding="10 8"
                                      BorderBrush="{StaticResource PrimaryColor}"
                                      Foreground="{StaticResource PrimaryColor}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="📅" Margin="0 0 6 0"/>
                                        <TextBlock Text="Schedule"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Patient Row 2 -->
                    <Border BorderBrush="{StaticResource BorderColor}" 
                          BorderThickness="0 0 0 1" Padding="24 20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*" MinWidth="300"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="250"/>
                                <ColumnDefinition Width="250"/>
                            </Grid.ColumnDefinitions>

                            <!-- ID -->
                            <TextBlock Grid.Column="0" Text="P-123489" 
                                     FontWeight="Bold" FontSize="14"
                                     VerticalAlignment="Center"/>

                            <!-- Patient Info -->
                            <Grid Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Avatar -->
                                <Border Grid.Column="0" Width="48" Height="48" 
                                      Background="#dcfce7" CornerRadius="24" 
                                      Margin="0 0 16 0">
                                    <TextBlock Text="LB" FontSize="18" FontWeight="Bold"
                                             Foreground="#166534"
                                             HorizontalAlignment="Center" 
                                             VerticalAlignment="Center"/>
                                </Border>

                                <!-- Info -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Lisa Brown" FontWeight="SemiBold"
                                             FontSize="15" Foreground="{StaticResource TextDark}"/>
                                    <TextBlock FontSize="13" 
                                             Foreground="{StaticResource TextSecondary}"
                                             Margin="0 4 0 0">
                                        <Run Text="Female •"/>
                                        <Run Text="32 years old •"/>
                                        <Run Text="Blood Type: O"/>
                                    </TextBlock>
                                </StackPanel>
                            </Grid>

                            <!-- Contact -->
                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                <TextBlock FontSize="14">
                                    <Run Text="📞" Foreground="{StaticResource TextSecondary}"/>
                                    <Run Text="0912345678"/>
                                </TextBlock>
                            </StackPanel>

                            <!-- Last Visit -->
                            <StackPanel Grid.Column="3" VerticalAlignment="Center">
                                <TextBlock Text="09/15/2023" FontWeight="SemiBold"
                                         FontSize="14" Foreground="{StaticResource TextDark}"/>
                                <TextBlock Text="General Checkup" FontSize="13"
                                         Foreground="{StaticResource TextSecondary}"
                                         Margin="0 4 0 0"/>
                            </StackPanel>

                            <!-- Status -->
                            <StackPanel Grid.Column="4" VerticalAlignment="Center">
                                <Border Background="#dcfce7" CornerRadius="20" 
                                      Padding="8 4" HorizontalAlignment="Left">
                                    <TextBlock Text="✅ Stable" 
                                             Foreground="#166534"
                                             FontSize="12" FontWeight="SemiBold"/>
                                </Border>
                            </StackPanel>

                            <!-- Actions -->
                            <StackPanel Grid.Column="5" Orientation="Horizontal" 
                                      VerticalAlignment="Center">
                                <Button Style="{StaticResource BtnSecondary}" 
                                      Padding="10 8" Margin="0 0 8 0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="📋" Margin="0 0 6 0"/>
                                        <TextBlock Text="Record"/>
                                    </StackPanel>
                                </Button>
                                <Button Style="{StaticResource BtnSecondary}" Padding="10 8">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="📅" Margin="0 0 6 0"/>
                                        <TextBlock Text="Schedule"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Patient Row 3 -->
                    <Border BorderBrush="{StaticResource BorderColor}" 
                          BorderThickness="0 0 0 1" Padding="24 20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*" MinWidth="300"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="250"/>
                                <ColumnDefinition Width="250"/>
                            </Grid.ColumnDefinitions>

                            <!-- ID -->
                            <TextBlock Grid.Column="0" Text="P-123512" 
                                     FontWeight="Bold" FontSize="14"
                                     VerticalAlignment="Center"/>

                            <!-- Patient Info -->
                            <Grid Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Avatar -->
                                <Border Grid.Column="0" Width="48" Height="48" 
                                      Background="#fef3c7" CornerRadius="24" 
                                      Margin="0 0 16 0">
                                    <TextBlock Text="TH" FontSize="18" FontWeight="Bold"
                                             Foreground="#92400e"
                                             HorizontalAlignment="Center" 
                                             VerticalAlignment="Center"/>
                                </Border>

                                <!-- Info -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Tom Harris" FontWeight="SemiBold"
                                             FontSize="15" Foreground="{StaticResource TextDark}"/>
                                    <TextBlock FontSize="13" 
                                             Foreground="{StaticResource TextSecondary}"
                                             Margin="0 4 0 0">
                                        <Run Text="Male •"/>
                                        <Run Text="58 years old"/>
                                    </TextBlock>
                                </StackPanel>
                            </Grid>

                            <!-- Contact -->
                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                <TextBlock FontSize="14">
                                    <Run Text="📞" Foreground="{StaticResource TextSecondary}"/>
                                    <Run Text="0987654321"/>
                                </TextBlock>
                            </StackPanel>

                            <!-- Last Visit -->
                            <StackPanel Grid.Column="3" VerticalAlignment="Center">
                                <TextBlock Text="10/01/2023" FontWeight="SemiBold"
                                         FontSize="14" Foreground="{StaticResource TextDark}"/>
                                <TextBlock Text="Chest pain" FontSize="13"
                                         Foreground="{StaticResource TextSecondary}"
                                         Margin="0 4 0 0"/>
                            </StackPanel>

                            <!-- Status -->
                            <StackPanel Grid.Column="4" VerticalAlignment="Center">
                                <Border Background="#fef3c7" CornerRadius="20" 
                                      Padding="8 4" HorizontalAlignment="Left">
                                    <TextBlock Text="📅 Follow-up: November" 
                                             Foreground="#92400e"
                                             FontSize="12" FontWeight="SemiBold"/>
                                </Border>
                            </StackPanel>

                            <!-- Actions -->
                            <StackPanel Grid.Column="5" Orientation="Horizontal" 
                                      VerticalAlignment="Center">
                                <Button Style="{StaticResource BtnSecondary}" 
                                      Padding="10 8" Margin="0 0 8 0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="📋" Margin="0 0 6 0"/>
                                        <TextBlock Text="Record"/>
                                    </StackPanel>
                                </Button>
                                <Button Style="{StaticResource BtnSecondary}" 
                                      Padding="10 8"
                                      BorderBrush="{StaticResource PrimaryColor}"
                                      Foreground="{StaticResource PrimaryColor}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="📅" Margin="0 0 6 0"/>
                                        <TextBlock Text="Schedule"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>
            </Border>
        </ScrollViewer>

        <!-- Pagination Footer -->
        <Border Grid.Row="3" Style="{StaticResource PageHeaderBorderStyle}" 
              Padding="32 20" BorderThickness="1 1 1 0">
            <Grid>
                <TextBlock Text="Showing 1-10 of 1,250 patients" 
                         FontSize="14" Foreground="{StaticResource TextSecondary}"
                         VerticalAlignment="Center"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="← Previous" Style="{StaticResource BtnSecondary}"
                          Padding="12 8" IsEnabled="False"/>
                    <Button Content="1" Style="{StaticResource BtnPrimary}"
                          Padding="12 8" Margin="8 0"/>
                    <Button Content="2" Style="{StaticResource BtnSecondary}"
                          Padding="12 8" Margin="0 0 8 0"/>
                    <Button Content="3" Style="{StaticResource BtnSecondary}"
                          Padding="12 8" Margin="0 0 8 0"/>
                    <Button Content="Next →" Style="{StaticResource BtnSecondary}"
                          Padding="12 8"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
