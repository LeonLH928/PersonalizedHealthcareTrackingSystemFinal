<Page x:Class="PersonalizedHealthcareTrackingSystemFinal.Views.DoctorView.DoctorWorkSchedulePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PersonalizedHealthcareTrackingSystemFinal.Views.DoctorView"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="DoctorWorkSchedulePage">

    <Grid Background="{StaticResource BgLight}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Style="{StaticResource PageHeaderBorderStyle}" Margin="20,32">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <StackPanel Margin="0,0,24,0">
                        <TextBlock Text="Work Schedule" FontSize="24" FontWeight="Bold"
                                   Foreground="{StaticResource DarkText}"/>
                        <TextBlock Text="October 2023" FontSize="14" 
                                   Foreground="{StaticResource TextSecondary}" 
                                   Margin="0,4,0,0"/>
                    </StackPanel>

                    <Border Background="#f1f5f9" CornerRadius="8" Margin="4" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <Button Content="Today" Style="{StaticResource SecondaryButton}"
                                    Margin="12,8" 
                                    Foreground="{StaticResource PrimaryColor}"
                                    FontWeight="SemiBold" BorderThickness="0"/>
                            <Button Content="‹" Style="{StaticResource SecondaryButton}"
                                    Margin="12,8" FontWeight="Bold" BorderThickness="0"/>
                            <Button Content="›" Style="{StaticResource SecondaryButton}"
                                    Margin="12,8" FontWeight="Bold" BorderThickness="0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="#f1f5f9" CornerRadius="8"
                            Margin="0,0,16,0">
                        <StackPanel Orientation="Horizontal">
                            <Button Content="Day" Style="{StaticResource SecondaryButton}"
                                    Margin="12,8" BorderThickness="0"/>
                            <Button Content="Week" Style="{StaticResource PrimaryButton}"
                                    Margin="12,8"/>
                            <Button Content="Month" Style="{StaticResource SecondaryButton}"
                                    Margin="12,8" BorderThickness="0"/>
                        </StackPanel>
                    </Border>

                    <Button Style="{StaticResource PrimaryButton}" Margin="16,10" Background="#0f172a">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🔒" Margin="0,0,8,0"/>
                            <TextBlock Text="Block Schedule"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" Background="White" BorderBrush="{StaticResource BorderColor}"
                BorderThickness="1,0,1,1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="#f8fafc" 
                        BorderThickness="0,0,0,1" BorderBrush="{StaticResource BorderColor}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" BorderThickness="0,0,1,0" 
                                BorderBrush="{StaticResource BorderColor}"/>

                        <StackPanel Grid.Column="1" Margin="12">
                            <TextBlock Text="Mon" FontWeight="SemiBold" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center"/>
                            <TextBlock Text="23" FontSize="24" FontWeight="Bold" Foreground="{StaticResource DarkText}" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2" Margin="12">
                            <TextBlock Text="Tue" FontWeight="SemiBold" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center"/>
                            <TextBlock Text="24" FontSize="24" FontWeight="Bold" Foreground="{StaticResource DarkText}" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                        </StackPanel>
                        <StackPanel Grid.Column="3" Margin="12">
                            <TextBlock Text="Wed" FontWeight="SemiBold" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center"/>
                            <TextBlock Text="25" FontSize="24" FontWeight="Bold" Foreground="{StaticResource DarkText}" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                        </StackPanel>
                        <StackPanel Grid.Column="4" Margin="12" Background="#f0f9ff">
                            <TextBlock Text="Thu (Today)" FontWeight="SemiBold" Foreground="{StaticResource PrimaryColor}" HorizontalAlignment="Center"/>
                            <TextBlock Text="26" FontSize="24" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                        </StackPanel>
                        <StackPanel Grid.Column="5" Margin="12">
                            <TextBlock Text="Fri" FontWeight="SemiBold" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center"/>
                            <TextBlock Text="27" FontSize="24" FontWeight="Bold" Foreground="{StaticResource DarkText}" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                        </StackPanel>
                        <StackPanel Grid.Column="6" Margin="12">
                            <TextBlock Text="Sat" FontWeight="SemiBold" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center"/>
                            <TextBlock Text="28" FontSize="24" FontWeight="Bold" Foreground="{StaticResource DarkText}" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                        </StackPanel>
                        <StackPanel Grid.Column="7" Margin="12">
                            <TextBlock Text="Sun" FontWeight="SemiBold" Foreground="{StaticResource DangerColor}" HorizontalAlignment="Center"/>
                            <TextBlock Text="29" FontSize="24" FontWeight="Bold" Foreground="{StaticResource DangerColor}" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="#f8fafc" 
                                BorderThickness="0,0,1,0" BorderBrush="{StaticResource BorderColor}">
                            <StackPanel>
                                <TextBlock Text="07:00" Margin="8" TextAlignment="Right" Foreground="{StaticResource TextSecondary}" FontSize="13" FontWeight="SemiBold" Height="120"/>
                                <TextBlock Text="08:00" Margin="8" TextAlignment="Right" Foreground="{StaticResource TextSecondary}" FontSize="13" FontWeight="SemiBold" Height="120"/>
                                <TextBlock Text="09:00" Margin="8" TextAlignment="Right" Foreground="{StaticResource TextSecondary}" FontSize="13" FontWeight="SemiBold" Height="120"/>
                                <TextBlock Text="10:00" Margin="8" TextAlignment="Right" Foreground="{StaticResource TextSecondary}" FontSize="13" FontWeight="SemiBold" Height="120"/>
                                <TextBlock Text="11:00" Margin="8" TextAlignment="Right" Foreground="{StaticResource TextSecondary}" FontSize="13" FontWeight="SemiBold" Height="120"/>
                                <TextBlock Text="12:00" Margin="8" TextAlignment="Right" Foreground="{StaticResource TextSecondary}" FontSize="13" FontWeight="SemiBold" Height="120"/>
                                <TextBlock Text="13:00" Margin="8" TextAlignment="Right" Foreground="{StaticResource TextSecondary}" FontSize="13" FontWeight="SemiBold" Height="120"/>
                                <TextBlock Text="14:00" Margin="8" TextAlignment="Right" Foreground="{StaticResource TextSecondary}" FontSize="13" FontWeight="SemiBold" Height="120"/>
                                <TextBlock Text="15:00" Margin="8" TextAlignment="Right" Foreground="{StaticResource TextSecondary}" FontSize="13" FontWeight="SemiBold" Height="120"/>
                                <TextBlock Text="16:00" Margin="8" TextAlignment="Right" Foreground="{StaticResource TextSecondary}" FontSize="13" FontWeight="SemiBold" Height="120"/>
                                <TextBlock Text="17:00" Margin="8" TextAlignment="Right" Foreground="{StaticResource TextSecondary}" FontSize="13" FontWeight="SemiBold" Height="120"/>
                            </StackPanel>
                        </Border>

                        <Grid Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" BorderThickness="0,0,1,0" BorderBrush="{StaticResource BorderColor}">
                                <Canvas Height="1320">
                                    <Border Canvas.Top="120" Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Canvas}}" Height="120"
                                            Background="#f1f5f9" BorderBrush="#94a3b8"
                                            BorderThickness="4,0,0,0" CornerRadius="4"
                                            Margin="12,8" Cursor="Hand">
                                        <StackPanel>
                                            <TextBlock Text="08:00 - 09:00" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                            <TextBlock Text="John Doe" FontWeight="Bold" FontSize="14"/>
                                            <TextBlock Text="Routine checkup" FontSize="12" Foreground="{StaticResource TextSecondary}" TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>
                                    </Border>
                                </Canvas>
                            </Border>

                            <Border Grid.Column="1" BorderThickness="0,0,1,0" BorderBrush="{StaticResource BorderColor}"/>

                            <Border Grid.Column="2" BorderThickness="0,0,1,0" BorderBrush="{StaticResource BorderColor}">
                                <Canvas Height="1320">
                                    <Border Canvas.Top="420" Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Canvas}}" Height="120"
                                            Background="#e0f2fe" BorderBrush="{StaticResource PrimaryColor}"
                                            BorderThickness="4,0,0,0" CornerRadius="4"
                                            Margin="12,8" Cursor="Hand">
                                        <StackPanel>
                                            <TextBlock Text="10:30 - 11:30" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,4" Foreground="{StaticResource PrimaryColor}"/>
                                            <TextBlock Text="Jane Wilson" FontWeight="Bold" FontSize="14" Foreground="{StaticResource PrimaryColor}"/>
                                            <TextBlock Text="Cardiology consultation" FontSize="12" Foreground="{StaticResource PrimaryColor}" TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>
                                    </Border>
                                </Canvas>
                            </Border>

                            <Border Grid.Column="3" BorderThickness="0,0,1,0" BorderBrush="{StaticResource BorderColor}">
                                <Canvas Height="1320">
                                    <Grid Canvas.Top="300" Width="1000">
                                        <Rectangle Height="2" Fill="{StaticResource DangerColor}" HorizontalAlignment="Stretch"/>
                                        <Ellipse Width="12" Height="12" Fill="{StaticResource DangerColor}" HorizontalAlignment="Left" Margin="-6,-5,0,0"/>
                                    </Grid>

                                    <Border Canvas.Top="240" Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Canvas}}" Height="120"
                                            Background="#dcfce7" BorderBrush="{StaticResource SuccessColor}"
                                            BorderThickness="4,0,0,0" CornerRadius="4"
                                            Margin="12,8" Cursor="Hand">
                                        <Border.Effect>
                                            <DropShadowEffect Color="#22c55e" Opacity="0.2" BlurRadius="8" ShadowDepth="4"/>
                                        </Border.Effect>
                                        <StackPanel>
                                            <TextBlock Text="09:00 - 10:00" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,4" Foreground="{StaticResource SuccessColor}"/>
                                            <TextBlock Text="John Smith" FontWeight="Bold" FontSize="14" Foreground="{StaticResource SuccessColor}"/>
                                            <TextBlock Text="▶ In Progress: Chest pain" FontSize="12" Foreground="{StaticResource SuccessColor}" TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Canvas.Top="840" Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Canvas}}" Height="60"
                                            Background="#e0f2fe" BorderBrush="{StaticResource PrimaryColor}"
                                            BorderThickness="4,0,0,0" CornerRadius="4"
                                            Margin="12,8" Cursor="Hand">
                                        <StackPanel>
                                            <TextBlock Text="14:00 - 14:30" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,4" Foreground="{StaticResource PrimaryColor}"/>
                                            <TextBlock Text="Mary Johnson" FontWeight="Bold" FontSize="14" Foreground="{StaticResource PrimaryColor}"/>
                                            <TextBlock Text="Review test results" FontSize="12" Foreground="{StaticResource PrimaryColor}" TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>
                                    </Border>
                                </Canvas>
                            </Border>

                            <Border Grid.Column="4" BorderThickness="0,0,1,0" BorderBrush="{StaticResource BorderColor}">
                                <Canvas Height="1320">
                                    <Border Canvas.Top="120" Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Canvas}}" Height="120"
                                            Background="#e0f2fe" BorderBrush="{StaticResource PrimaryColor}"
                                            BorderThickness="4,0,0,0" CornerRadius="4"
                                            Margin="12,8" Cursor="Hand">
                                        <StackPanel>
                                            <TextBlock Text="08:00 - 09:00" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,4" Foreground="{StaticResource PrimaryColor}"/>
                                            <TextBlock Text="Robert Brown" FontWeight="Bold" FontSize="14" Foreground="{StaticResource PrimaryColor}"/>
                                            <TextBlock Text="General checkup" FontSize="12" Foreground="{StaticResource PrimaryColor}" TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>
                                    </Border>
                                </Canvas>
                            </Border>

                            <Border Grid.Column="5" BorderThickness="0,0,1,0" BorderBrush="{StaticResource BorderColor}" Background="#f8fafc"/>
                            <Border Grid.Column="6" Background="#f8fafc"/>
                        </Grid>
                    </Grid>
                </ScrollViewer>
            </Grid>
        </Border>

        <Border Grid.Row="2" Style="{StaticResource PageHeaderBorderStyle}" 
                Margin="32,12" BorderThickness="1,1,1,0">
            <StackPanel Orientation="Horizontal">
                <StackPanel Orientation="Horizontal" Margin="0,0,24,0">
                    <Border Width="12" Height="12" Background="#e0f2fe" 
                            BorderBrush="{StaticResource PrimaryColor}"
                            BorderThickness="2" CornerRadius="4" Margin="0,0,8,0"/>
                    <TextBlock Text="Scheduled" FontSize="13" Foreground="{StaticResource TextSecondary}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,24,0">
                    <Border Width="12" Height="12" Background="#dcfce7" 
                            BorderBrush="{StaticResource SuccessColor}"
                            BorderThickness="2" CornerRadius="4" Margin="0,0,8,0"/>
                    <TextBlock Text="Checked-in / In Progress" FontSize="13" Foreground="{StaticResource TextSecondary}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <Border Width="12" Height="12" Background="#f1f5f9" 
                            BorderBrush="#94a3b8"
                            BorderThickness="2" CornerRadius="4" Margin="0,0,8,0"/>
                    <TextBlock Text="Completed" FontSize="13" Foreground="{StaticResource TextSecondary}"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>