<Page x:Class="PersonalizedHealthcareTrackingSystemFinal.Views.PatientView.PatientBookingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:fa="http://schemas.fontawesome.io/icons/"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      xmlns:converters="clr-namespace:PersonalizedHealthcareTrackingSystemFinal.Helpers"
      mc:Ignorable="d"
      d:DesignHeight="800" d:DesignWidth="1200"
      Background="#F1F5F9">

    <Page.Resources>
        <converters:StringToVisibility x:Key="StringToVisibility"/>
        <converters:LocalToUtcDisplayConverter x:Key="LocalToUtcDisplayConverter"/>
        <converters:NullDateTimeToCurrentDate x:Key="NullDateTimeToCurrentDate"/>
        <converters:IsCurrentNotNullToVisibility x:Key="IsCurrentNotNullToVisibility"/>
        <converters:IsCurrentSmallerThanCurrentToVisibility x:Key="IsCurrentSmallerThanCurrentToVisibility"/>
        <converters:IsCurrentNullToVisibility x:Key="IsCurrentNullToVisibility"/>
        <converters:IsCurrentSundayToVisibility x:Key="IsCurrentSundayToVisibility"/>
        <converters:IsCurrentNotSundayAndSmallerThanCurrentToVisibility x:Key="IsCurrentNotSundayAndSmallerThanCurrentToVisibility"/>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0"
                Background="{StaticResource BgWhite}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,0,0,1"
                Padding="32,20">
            <TextBlock Text="Book a New Appointment"
                       Style="{StaticResource PageHeaderTextBlockStyle}"/>
        </Border>

        <!-- MAIN AREA 2 COLUMNS -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.4*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid Visibility="{Binding IsLoadingBar, Converter={StaticResource BoolToVisibilityConverter}}"
                      Background="#80FFFFFF" 
                      Grid.RowSpan="3" 
                      d:IsHidden="False"
                      Panel.ZIndex="999">
                <fa:ImageAwesome 
                        Icon="Spinner" 
                        Spin="True" 
                        Height="48" 
                        Width="48" />
            </Grid>
            <Grid Visibility="{Binding IsLoadingDoctor, Converter={StaticResource BoolToVisibilityConverter}}"
                      Grid.Column="1"
                      Grid.RowSpan="3" 
                      Background="#80FFFFFF" 
                      d:IsHidden="False"
                      Panel.ZIndex="999">
                <fa:ImageAwesome                            
                        Icon="Spinner" 
                        Spin="True" 
                        Height="48" 
                        Width="48" />
            </Grid>

            <!-- LEFT PANEL: Filters & Doctor List -->
            <Grid Grid.Column="0" Background="{StaticResource BgWhite}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" BorderThickness="0,0,1,0" BorderBrush="{StaticResource BorderColor}"/>

                <!-- FILTERS -->
                <StackPanel Grid.Row="0" Margin="24" Background="{StaticResource BgWhite}">
                    <TextBlock Text="Search doctor or symptoms"
                               Style="{StaticResource FormLabel}"/>
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Style="{StaticResource SearchInputTextBoxStyle}"
                                 Tag="E.g., Headache, Dr. Tuan..."
                                 Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                            <TextBox.InputBindings>
                                <KeyBinding Key="Enter" Command="{Binding SearchCommand}"/>
                            </TextBox.InputBindings>
                        </TextBox>
                        <Button
                            Grid.Column="2"
                            Content="&#128472;"
                            Command="{Binding ReloadButtonCommand}"
                            Style="{StaticResource ReloadButtonStyle}"
                            VerticalAlignment="Center"/>
                    </Grid>


                    <StackPanel>
                        <TextBlock Text="Specialty" Style="{StaticResource FormLabel}"/>
                        <ComboBox Style="{StaticResource FormComboBox}">
                            <ComboBoxItem Content="All specialties"/>
                            <ComboBoxItem Content="Cardiology" IsSelected="True"/>
                            <ComboBoxItem Content="Neurology"/>
                        </ComboBox>
                    </StackPanel>

                </StackPanel>

                <!-- DOCTOR LIST -->
                <Border Grid.Row="1"
                        Background="{StaticResource BgLight}"
                        BorderBrush="{StaticResource BorderColor}"
                        BorderThickness="0,1,1,0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16"
                                  HorizontalScrollBarVisibility="Disabled">
                            <ListBox 
                                SelectedItem="{Binding SelectedDoctor}"
                                ItemsSource="{Binding Doctors}" 
                                AlternationCount="9999"
                                Style="{StaticResource ListBoxStyle}">
                                <ListBox.ItemTemplate>  
                                    <DataTemplate>
                                        <Border Style="{StaticResource BaseCustomBorderStyle}"
                                                Background="White"
                                                Padding="10,20"
                                                Margin="0,0,0,10"
                                                BorderBrush="{StaticResource LightBorder}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <Ellipse Grid.Column="0" Width="64" Height="64"
                                                         Fill="#e2e8f0" Margin="0,0,16,0"/>

                                                <StackPanel Grid.Column="1">
                                                    <TextBlock 
                                                        FontSize="16" FontWeight="SemiBold"
                                                        Foreground="{StaticResource DarkText}">
                                                        <TextBlock.Text>
                                                            <MultiBinding StringFormat="{}Dr. {0} {1}">
                                                                <Binding Path="Doctor.User.FirstName"/>
                                                             <Binding Path="Doctor.User.LastName"/>
                                                            </MultiBinding>
                                                        </TextBlock.Text>
                                                    </TextBlock>
                                                    <TextBlock Foreground="{StaticResource SecondaryText}"
                                                               FontSize="13" Margin="0,4,0,8"
                                                               TextWrapping="Wrap">
                                                        <Run Text="{Binding Doctor.Specialization}"/>
                                                        <Run Text=" • "/>
                                                        <Run Text="{Binding Doctor.YearsOfExperience, StringFormat={}{0} years of experience}"/>
                                                    </TextBlock>

                                                    <TextBlock Text="Soonest slot: Tomorrow"
                                                               FontSize="12"
                                                               Foreground="{StaticResource SecondaryText}"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            <!--
                            <Border Style="{StaticResource DoctorCardStyle}"
                                    Background="#f0f9ff"
                                    BorderBrush="{StaticResource PrimaryColor}"
                                    BorderThickness="2">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Ellipse Grid.Column="0" Width="64" Height="64"
                                             Fill="#cbd5e1" Margin="0,0,16,0"/>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Dr. Tran Minh Tuan"
                                                   FontSize="16" FontWeight="SemiBold"
                                                   Foreground="{StaticResource DarkText}"/>
                                        <TextBlock Foreground="{StaticResource SecondaryText}"
                                                   FontSize="13" Margin="0,4,0,8">
                                            <Run Text="Cardiology"/>
                                            <Run Text=" • "/>
                                            <Run Text="15 years of experience"/>
                                        </TextBlock>

