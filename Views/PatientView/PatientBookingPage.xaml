<Page x:Class="PersonalizedHealthcareTrackingSystemFinal.Views.PatientView.PatientBookingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="800" d:DesignWidth="1200"
      Background="#F1F5F9">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0"
                Background="{StaticResource BgWhite}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,0,0,1"
                Padding="32,20">
            <TextBlock Text="Book a New Appointment"
                       FontSize="24"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource DarkText}"/>
        </Border>

        <!-- MAIN AREA 2 COLUMNS -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT PANEL: Filters & Doctor List -->
            <Grid Grid.Column="0" Background="{StaticResource BgWhite}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" BorderThickness="0,0,1,0" BorderBrush="{StaticResource BorderColor}"/>

                <!-- FILTERS -->
                <StackPanel Grid.Row="0" Margin="24" Background="{StaticResource BgWhite}">
                    <TextBlock Text="Search doctor or symptoms"
                               Style="{StaticResource FormLabel}"/>
                    <TextBox Style="{StaticResource FormInput}"
                             Text="e.g., Headache, Dr. Tuan..."/>

                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Specialty" Style="{StaticResource FormLabel}"/>
                            <ComboBox Style="{StaticResource FormComboBox}">
                                <ComboBoxItem Content="All specialties"/>
                                <ComboBoxItem Content="Cardiology" IsSelected="True"/>
                                <ComboBoxItem Content="Neurology"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Preferred date" Style="{StaticResource FormLabel}"/>
                            <DatePicker BorderBrush="{StaticResource BorderColor}"
                                        BorderThickness="1"
                                        Padding="12"
                                        FontSize="14"
                                        Margin="0,0,0,16"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>

                <!-- DOCTOR LIST -->
                <Border Grid.Row="1"
                        Background="{StaticResource BgLight}"
                        BorderBrush="{StaticResource BorderColor}"
                        BorderThickness="0,1,1,0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                        <StackPanel>

                            <!-- Doctor 1 (highlighted) -->
                            <Border Style="{StaticResource DoctorCardStyle}"
                                    Background="#f0f9ff"
                                    BorderBrush="{StaticResource PrimaryColor}"
                                    BorderThickness="2">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Ellipse Grid.Column="0" Width="64" Height="64"
                                             Fill="#cbd5e1" Margin="0,0,16,0"/>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Dr. Tran Minh Tuan"
                                                   FontSize="16" FontWeight="SemiBold"
                                                   Foreground="{StaticResource DarkText}"/>
                                        <TextBlock Foreground="{StaticResource SecondaryText}"
                                                   FontSize="13" Margin="0,4,0,8">
                                            <Run Text="Cardiology"/>
                                            <Run Text=" • "/>
                                            <Run Text="15 years of experience"/>
                                        </TextBlock>

                                        <Border Background="#dcfce7"
                                                CornerRadius="20"
                                                Padding="8,4"
                                                HorizontalAlignment="Left">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="⚡" FontSize="12" Margin="0,0,4,0"/>
                                                <TextBlock Text="Available today"
                                                           FontSize="12"
                                                           FontWeight="SemiBold"
                                                           Foreground="{StaticResource SuccessColor}"/>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Doctor 2 -->
                            <Border Style="{StaticResource DoctorCardStyle}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Ellipse Grid.Column="0" Width="64" Height="64"
                                             Fill="#e2e8f0" Margin="0,0,16,0"/>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Dr. Le Thi Lan"
                                                   FontSize="16" FontWeight="SemiBold"
                                                   Foreground="{StaticResource DarkText}"/>
                                        <TextBlock Foreground="{StaticResource SecondaryText}"
                                                   FontSize="13" Margin="0,4,0,8">
                                            <Run Text="Cardiology"/>
                                            <Run Text=" • "/>
                                            <Run Text="8 years of experience"/>
                                        </TextBlock>

                                        <TextBlock Text="Soonest slot: Tomorrow"
                                                   FontSize="12"
                                                   Foreground="{StaticResource SecondaryText}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Doctor 3 -->
                            <Border Style="{StaticResource DoctorCardStyle}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Ellipse Grid.Column="0" Width="64" Height="64"
                                             Fill="#e2e8f0" Margin="0,0,16,0"/>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Dr. Pham Hoang"
                                                   FontSize="16" FontWeight="SemiBold"
                                                   Foreground="{StaticResource DarkText}"/>
                                        <TextBlock Text="Interventional Cardiology"
                                                   Foreground="{StaticResource SecondaryText}"
                                                   FontSize="13" Margin="0,4,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </Grid>

            <!-- RIGHT PANEL: Schedule -->
            <Grid Grid.Column="1" Background="{StaticResource BgWhite}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Doctor profile header -->
                <Border Grid.Row="0"
                        BorderBrush="{StaticResource BorderColor}"
                        BorderThickness="0,0,0,1"
                        Padding="24">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Doctor info -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <Ellipse Width="80" Height="80" Fill="#cbd5e1" Margin="0,0,16,0"/>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Dr. Tran Minh Tuan"
                                           FontSize="26"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource DarkText}"/>

                                <TextBlock Foreground="{StaticResource SecondaryText}"
                                           FontSize="14" Margin="0,8,0,12">
                                    <Run Text="Head of Cardiology Department"/>
                                    <Run Text=" • "/>
                                    <Run Text="International General Hospital"/>
                                </TextBlock>

                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontWeight="SemiBold" FontSize="14" Margin="0,0,16,0">
                                        <Run Text="⭐"/>
                                        <Run Text="4.9 (150 reviews)"/>
                                    </TextBlock>

                                    <TextBlock FontWeight="SemiBold" FontSize="14">
                                        <Run Text="💰"/>
                                        <Run Text="Consultation fee: 500,000 VND"/>
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>

                        <!-- Live badge -->
                        <Border Grid.Column="1"
                                Background="#dcfce7"
                                CornerRadius="8"
                                Padding="12,6"
                                VerticalAlignment="Top">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="8" Height="8"
                                         Fill="{StaticResource SuccessColor}"
                                         Margin="0,0,6,0"
                                         x:Name="BlinkingDot">
                                    <Ellipse.Triggers>
                                        <EventTrigger RoutedEvent="Loaded">
                                            <BeginStoryboard Storyboard="{StaticResource BlinkAnimation}"/>
                                        </EventTrigger>
                                    </Ellipse.Triggers>
                                </Ellipse>
                                <TextBlock Text="Real-time updates"
                                           FontWeight="SemiBold"
                                           FontSize="14"
                                           Foreground="{StaticResource SuccessColor}"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <!-- TIME SLOTS -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="32">
                    <StackPanel>

                        <!-- Date Navigator -->
                        <Grid Margin="0,0,0,32">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0" Width="40" Height="40"
                                    Background="{StaticResource BgWhite}"
                                    BorderBrush="{StaticResource BorderColor}"
                                    BorderThickness="1"
                                    Cursor="Hand">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="20">
                                            <TextBlock Text="‹" FontSize="18"
                                                       Foreground="{StaticResource SecondaryText}"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                                                <Setter Property="Background" Value="#f0f9ff"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <TextBlock Grid.Column="1"
                                       Text="Today, Friday – 05/12/2025"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource DarkText}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>

                            <Button Grid.Column="2" Width="40" Height="40"
                                    Background="{StaticResource BgWhite}"
                                    BorderBrush="{StaticResource BorderColor}"
                                    BorderThickness="1"
                                    Cursor="Hand">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="20">
                                            <TextBlock Text="›" FontSize="18"
                                                       Foreground="{StaticResource SecondaryText}"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                                                <Setter Property="Background" Value="#f0f9ff"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>

                        <!-- MORNING -->
                        <StackPanel Margin="0,0,0,32">
                            <TextBlock Text="Morning"
                                       FontSize="16"
                                       Foreground="{StaticResource SecondaryText}"
                                       Margin="0,0,0,16"/>

                            <WrapPanel>
                                <Button Content="08:00" Style="{StaticResource TimeSlotBooked}"/>
                                <Button Content="08:30" Style="{StaticResource TimeSlotBooked}"/>
                                <Button Content="09:00" Style="{StaticResource TimeSlotAvailable}"
                                        Click="TimeSlot_Click" Tag="09:00 - 09:30"/>
                                <Button Content="09:30" Style="{StaticResource TimeSlotAvailable}"
                                        Click="TimeSlot_Click" Tag="09:30 - 10:00"/>
                                <Button Content="10:00" Style="{StaticResource TimeSlotBooked}"/>
                                <Button Content="10:30" Style="{StaticResource TimeSlotAvailable}"
                                        Click="TimeSlot_Click" Tag="10:30 - 11:00"/>
                            </WrapPanel>
                        </StackPanel>

                        <!-- AFTERNOON -->
                        <StackPanel>
                            <TextBlock Text="Afternoon"
                                       FontSize="16"
                                       Foreground="{StaticResource SecondaryText}"
                                       Margin="0,0,0,16"/>

                            <WrapPanel>
                                <Button Content="13:30" Style="{StaticResource TimeSlotBooked}"/>
                                <Button Content="14:00" Style="{StaticResource TimeSlotBooked}"/>
                                <Button Content="14:30" Style="{StaticResource TimeSlotAvailable}"
                                        Click="TimeSlot_Click" Tag="14:30 - 15:00"/>
                                <Button Content="15:00" Style="{StaticResource TimeSlotAvailable}"
                                        Click="TimeSlot_Click" Tag="15:00 - 15:30"/>
                                <Button Content="15:30" Style="{StaticResource TimeSlotAvailable}"
                                        Click="TimeSlot_Click" Tag="15:30 - 16:00"/>
                                <Button Content="16:00" Style="{StaticResource TimeSlotBooked}"/>
                            </WrapPanel>
                        </StackPanel>

                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>

        <!-- CONFIRMATION MODAL -->
        <Grid x:Name="ModalOverlay"
              Grid.Row="0" Grid.RowSpan="2"
              Background="#80000000"
              Visibility="Collapsed">
            <Border Background="{StaticResource BgWhite}"
                    CornerRadius="20"
                    Width="500"
                    Padding="32"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.1"
                                      BlurRadius="25" ShadowDepth="0"/>
                </Border.Effect>

                <StackPanel>
                    <TextBlock Text="Confirm Appointment"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="{StaticResource DarkText}"
                               Margin="0,0,0,8"/>

                    <TextBlock Text="Please review the details before confirming."
                               Foreground="{StaticResource SecondaryText}"
                               Margin="0,0,0,24"/>

                    <!-- Booking Summary -->
                    <Border Background="{StaticResource BgLight}"
                            CornerRadius="12"
                            Padding="20"
                            Margin="0,0,0,24">
                        <StackPanel>

                            <Grid Margin="0,0,0,12">
                                <TextBlock Text="Doctor:" Foreground="{StaticResource SecondaryText}"/>
                                <TextBlock Text="Dr. Tran Minh Tuan (Cardiology)"
                                           FontWeight="SemiBold"
                                           HorizontalAlignment="Right"/>
                            </Grid>

                            <Grid Margin="0,0,0,12">
                                <TextBlock Text="Date:" Foreground="{StaticResource SecondaryText}"/>
                                <TextBlock Text="Friday, 27/10/2023"
                                           FontWeight="SemiBold"
                                           HorizontalAlignment="Right"/>
                            </Grid>

                            <Rectangle Height="1" Fill="{StaticResource BorderColor}" Margin="0,0,0,12"/>

                            <Grid>
                                <TextBlock Text="Time:" Foreground="{StaticResource SecondaryText}"/>
                                <TextBlock x:Name="SelectedTimeSlot"
                                           Text="09:00 - 09:30"
                                           FontWeight="Bold"
                                           FontSize="18"
                                           Foreground="{StaticResource PrimaryColor}"
                                           HorizontalAlignment="Right"/>
                            </Grid>

                        </StackPanel>
                    </Border>

                    <!-- Textbox Reason -->
                    <StackPanel Margin="0,0,0,24">
                        <TextBlock Text="Reason for visit (Optional)"
                                   Style="{StaticResource FormLabel}"/>
                        <TextBox Height="80" TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 Style="{StaticResource FormInput}"
                                 Text="e.g., I have chest discomfort..."/>
                    </StackPanel>

                    <!-- Buttons -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0" Content="Cancel"
                                Background="Transparent"
                                BorderBrush="{StaticResource BorderColor}"
                                BorderThickness="2"
                                Foreground="{StaticResource SecondaryText}"
                                Padding="16"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Cursor="Hand"
                                Click="CancelBooking_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="12"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button Grid.Column="2"
                                Background="{StaticResource PrimaryColor}"
                                Foreground="White"
                                BorderThickness="0"
                                Padding="16"
                                FontSize="16"
                                FontWeight="Bold"
                                Cursor="Hand"
                                Click="ConfirmBooking_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="12"
                                            Padding="{TemplateBinding Padding}">
                                        <StackPanel Orientation="Horizontal"
                                                    HorizontalAlignment="Center">
                                            <TextBlock Text="✅ " FontSize="16"
                                                       VerticalAlignment="Center"/>
                                            <TextBlock Text="Confirm appointment"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{StaticResource PrimaryDark}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                    </Grid>
                </StackPanel>
            </Border>
        </Grid>

    </Grid>
</Page>