                                                   FontSize="13" Margin="0,4,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                            -->
                    </ScrollViewer>
                </Border>
            </Grid>

            <!-- RIGHT PANEL: Schedule -->
            <Grid Grid.Column="1" Background="{StaticResource BgWhite}"
                  Visibility="{Binding IsDoctorSelected, Converter={StaticResource BoolToVisibilityConverter}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Doctor profile header -->
                <Border Grid.Row="0"
                        BorderBrush="{StaticResource BorderColor}"
                        BorderThickness="0,0,0,1"
                        Padding="24">

                    <!-- Doctor info -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Ellipse Width="80" Height="80" Fill="#cbd5e1" Margin="0,0,16,0"/>
                        
                        <StackPanel Grid.Column="1">
                            <TextBlock 
                                FontSize="26"
                                FontWeight="Bold"
                                Foreground="{StaticResource DarkText}"
                                Margin="0,0,0,5">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}Dr. {0} {1}">
                                        <Binding Path="SelectedDoctor.Doctor.User.FirstName"/>
                                        <Binding Path="SelectedDoctor.Doctor.User.LastName"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>

                            <Border 
                                CornerRadius="8"
                                Padding="12,6"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Left"
                                Margin="0,0,0,5">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="#dcfce7"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedDoctor.Doctor.User.IsActive}"
                                                         Value="False">
                                                <Setter Property="Background" Value="{StaticResource StatTagBorder}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>  
                                </Border.Style>
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="8" Height="8"
                                            Margin="0,0,6,0"
                                            x:Name="BlinkingDot">
                                        <Ellipse.Style>
                                            <Style TargetType="Ellipse">
                                                <Setter Property="Fill" Value="{StaticResource SuccessColor}"/>
                                                <Style.Triggers>
                                                    <EventTrigger RoutedEvent="Loaded">
                                                        <BeginStoryboard Storyboard="{StaticResource BlinkAnimation}"/>
                                                    </EventTrigger>
                                                    <DataTrigger Binding="{Binding SelectedDoctor.Doctor.User.IsActive}"
                                                        Value="False">
                                                        <Setter Property="Fill" Value="{StaticResource DangerColor}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Ellipse.Style>
                                    </Ellipse>
                                    <TextBlock 
                                               FontWeight="SemiBold"
                                               FontSize="14">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="Online"/>
                                                <Setter Property="Foreground" Value="{StaticResource SuccessColor}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SelectedDoctor.Doctor.User.IsActive}"
                                                                 Value="False">
                                                        <Setter Property="Foreground" Value="{StaticResource DangerColor}"/>
                                                        <Setter Property="Text" Value="Offline"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </Border>

                            <StackPanel Margin="0,0,0,5"
                                        Orientation="Horizontal">

                                <TextBlock Style="{StaticResource SecondaryTextTextBlockStyle}"
                                           Text="{Binding SelectedDoctor.Doctor.Specialization}"
                                           Margin="0,0,10,0"/>

                                <TextBlock Style="{StaticResource SecondaryTextTextBlockStyle}"
                                           Text="•"
                                           Grid.Column="1"
                                           Margin="0,0,10,0"/>

                                <TextBlock Style="{StaticResource SecondaryTextTextBlockStyle}"
                                           Text="Medicare Hospital"
                                           Grid.Column="2"
                                           Margin="0,0,10,0"/>
                            </StackPanel>
                            <StackPanel Margin="0,0,0,5"
                                        Orientation="Horizontal">

                                <TextBlock Style="{StaticResource SecondaryTextTextBlockStyle}"
                                           Text="{Binding SelectedDoctor.Doctor.Rating,
                                                          StringFormat={}{0}⭐}"
                                           Margin="0,0,10,0"/>

                                <TextBlock Style="{StaticResource SecondaryTextTextBlockStyle}"
                                           Text="•"
                                           Grid.Column="1"
                                           Margin="0,0,10,0"/>

                                <TextBlock Style="{StaticResource SecondaryTextTextBlockStyle}"
                                           Grid.Column="2"
                                           Margin="0,0,10,0">
                                    <TextBlock.Text>
                                        <Binding Path="SelectedDoctor.Doctor.ConsultationFee" StringFormat="{}{0:#,0} ₫"/>
                                    </TextBlock.Text>
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>
                        <Grid Grid.Column="2"
                              
                              HorizontalAlignment="Right">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <StackPanel>
                                <TextBlock
                                    Text="Schedules:"
                                    Style="{StaticResource CustomBaseTextBlockStyle}"
                                    FontWeight="SemiBold"
                                    FontSize="18"/>
                                <TextBlock
                                    Style="{StaticResource SecondaryTextTextBlockStyle}">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}• Monday - Saturday: {0:hh:mm tt} - {1:hh:mm tt}">
                                            <Binding Path="SelectedDoctor.Schedule.StartTime" Converter="{StaticResource LocalToUtcDisplayConverter}"/>
                                            <Binding Path="SelectedDoctor.Schedule.EndTime" Converter="{StaticResource LocalToUtcDisplayConverter}"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                                <TextBlock
                                    Style="{StaticResource SecondaryTextTextBlockStyle}"
                                    Text="• Sunday: Unavailable"/>
                            </StackPanel>
                            <StackPanel
                                Orientation="Horizontal"
                                Grid.Row="1">
                                <TextBlock Text="Preferred date: " Style="{StaticResource CustomBaseTextBlockStyle}"
                                        VerticalAlignment="Center"
                                        FontWeight="Bold"
                                        FontSize="20"/>
                                <DatePicker Style="{StaticResource StandardDatePicker}"
                                        SelectedDate="{Binding SelectedDate}"
                                        FontSize="18"
                                        VerticalAlignment="Center"
                                        Margin="0,0,5,0" Height="44"
                                        HorizontalAlignment="Stretch"
                                        Padding="10,0"
                                        HorizontalContentAlignment="Left"
                                        Width="Auto"/>
                            </StackPanel>
                        </Grid>
                    </Grid>

                </Border>

                <!-- TIME SLOTS -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="32">
                    <StackPanel>

                        <!-- Date Navigator -->
                        <Grid Margin="0,0,0,32">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0" Width="40" Height="40"
                                    Background="{StaticResource BgWhite}"
                                    BorderBrush="{StaticResource BorderColor}"
                                    BorderThickness="1"
                                    Cursor="Hand"
                                    Command="{Binding LeftButtonCommand}">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="20"
                                                x:Name="Border">
                                            <TextBlock Text="‹" FontSize="18"
                                                       Foreground="{StaticResource SecondaryText}"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                            <VisualStateManager.VisualStateGroups>
                                                <VisualStateGroup x:Name="CommonStates">
                                                    <VisualStateGroup.Transitions>
                                                        <VisualTransition GeneratedDuration="0:0:0.2"/>
                                                    </VisualStateGroup.Transitions>

                                                    <VisualState x:Name="Normal"/>

                                                    <VisualState x:Name="MouseOver">
                                                        <Storyboard>
                                                            <ColorAnimation 
                                                                Storyboard.TargetName="Border"
                                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                To="#e2e8f0"/>
                                                        </Storyboard>
                                                    </VisualState>

                                                </VisualStateGroup>
                                            </VisualStateManager.VisualStateGroups>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <TextBlock Grid.Column="1"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource DarkText}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Visibility="{Binding SelectedDate,
                                                            Converter={StaticResource IsCurrentNullToVisibility}}">
                                <TextBlock.Text>
                                    <Binding Source="{x:Static sys:DateTime.Now}" StringFormat="{}Today, {0:dddd - dd/MM/yyyy}"/>
                                </TextBlock.Text>
                            </TextBlock>

                            <TextBlock Grid.Column="1"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource DarkText}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Visibility="{Binding SelectedDate,
                                                            Converter={StaticResource IsCurrentNotNullToVisibility}}">
                                <TextBlock.Text>
                                    <Binding Path="SelectedDate" StringFormat="{}{0:dddd - dd/MM/yyyy}"/>
                                </TextBlock.Text>
                            </TextBlock>

                            <Button Grid.Column="2" Width="40" Height="40"
                                    Background="{StaticResource BgWhite}"
                                    BorderBrush="{StaticResource BorderColor}"
                                    BorderThickness="1"
                                    Cursor="Hand"
                                    Command="{Binding RightButtonCommand}">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="20"
                                                x:Name="Border">
                                            <TextBlock Text="›" FontSize="18"
                                                       Foreground="{StaticResource SecondaryText}"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                            <VisualStateManager.VisualStateGroups>
                                                <VisualStateGroup x:Name="CommonStates">
                                                    <VisualStateGroup.Transitions>
                                                        <VisualTransition GeneratedDuration="0:0:0.2"/>
                                                    </VisualStateGroup.Transitions>

                                                    <VisualState x:Name="Normal"/>

                                                    <VisualState x:Name="MouseOver">
                                                        <Storyboard>
                                                            <ColorAnimation 
                                                                Storyboard.TargetName="Border"
                                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                To="#e2e8f0"/>
                                                        </Storyboard>
                                                    </VisualState>

                                                </VisualStateGroup>
                                            </VisualStateManager.VisualStateGroups>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>

                        <StackPanel
                                Visibility="{Binding SelectedDate,
                                Converter={StaticResource IsCurrentSundayToVisibility}}">
                            <TextBlock Text="Clinical examination is not available on Sundays."
                                       Style="{StaticResource CustomBaseTextBlockStyle}"
                                       FontWeight="SemiBold"
                                       FontSize="20"/>
                        </StackPanel>
                        
                        <StackPanel
                                Visibility="{Binding SelectedDate,
                                Converter={StaticResource IsCurrentSmallerThanCurrentToVisibility}}">
                            <TextBlock Text="The appointment's date must be greater than the current date."
                                       Style="{StaticResource CustomBaseTextBlockStyle}"
                                       FontWeight="SemiBold"
                                       FontSize="20"/>
                        </StackPanel>
                        <!-- MORNING -->
                        <StackPanel Margin="0,0,0,32"
                                    Visibility="{Binding SelectedDate,
                                    Converter={StaticResource IsCurrentNotSundayAndSmallerThanCurrentToVisibility}}">
                            <TextBlock Text="Morning"
                                       FontSize="16"
                                       Foreground="{StaticResource SecondaryText}"
                                       Margin="0,0,0,16"/>

                            <ItemsControl ItemsSource="{Binding MorningSlots}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel HorizontalAlignment="Center" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding StartSlot, StringFormat={}{0:hh:mm}}"
                                                Style="{StaticResource TimeSlotSmart}"
                                                Command="{Binding DataContext.SelectTimeButtonCommand,
                                                                  RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding}"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>

                        <!-- AFTERNOON -->
                        <StackPanel
                                    Visibility="{Binding SelectedDate,
                                    Converter={StaticResource IsCurrentNotSundayAndSmallerThanCurrentToVisibility}}">
                            <TextBlock Text="Afternoon"
                                       FontSize="16"
                                       Foreground="{StaticResource SecondaryText}"
                                       Margin="0,0,0,16"/>


                            <ItemsControl ItemsSource="{Binding AfternoonSlots}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel HorizontalAlignment="Center" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding StartSlot, StringFormat={}{0:hh:mm}}"
                                                Style="{StaticResource TimeSlotSmart}"
                                                Command="{Binding DataContext.SelectTimeButtonCommand,
                                                                  RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding}"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>

                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>

        <Grid Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
              Grid.RowSpan="3" 
              Background="#80FFFFFF" 
              d:IsHidden="False">
            <fa:ImageAwesome 
                Icon="Spinner" 
                Spin="True" 
                Height="48" 
                Width="48"/>
        </Grid>
    </Grid>
</Page>