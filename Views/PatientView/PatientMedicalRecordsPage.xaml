<Page x:Class="PersonalizedHealthcareTrackingSystemFinal.Views.PatientView.PatientMedicalRecordsPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:fa="http://schemas.fontawesome.io/icons/"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:PersonalizedHealthcareTrackingSystemFinal.Views.PatientView"
	xmlns:converters="clr-namespace:PersonalizedHealthcareTrackingSystemFinal.Helpers"
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="1500"
      Title="PatientMedicalRecordsPage">
    <Page.Resources>
        <converters:StringToVisibility x:Key="StringToVisibility"/>
        <converters:CollectionToVisibilityConverter x:Key="CollectionToVisibilityConverter"/>
        <converters:EmptyCollectionToVisibilityConverter x:Key="EmptyCollectionToVisibilityConverter"/>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Style="{StaticResource PageHeaderBorderStyle}" Padding="32">
            <StackPanel>
                <Grid Margin="0,0,0,24">
                    <StackPanel>
                        <TextBlock Text="Personal Health Record (PHR)" 
                                       Style="{StaticResource PageHeaderTextBlockStyle}"
                                       FontSize="28"/>
                        <TextBlock Text="Medical history, diagnoses, and vital signs tracking." 
                                       Style="{StaticResource SecondaryTextTextBlockStyle}"/>
                    </StackPanel>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Style="{StaticResource SearchInputTextBoxStyle}"
                                    Tag="Search by diagnosis, or doctor..."
                                    Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding SearchCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>
                    <Button
                        Grid.Column="2"
                        Content="&#128472;"
                        Command="{Binding ReloadButtonCommand}"
                        Style="{StaticResource ReloadButtonStyle}"
                        VerticalAlignment="Center"/>
                </Grid>
            </StackPanel>
        </Border>
        <ScrollViewer Grid.Row="1" Padding="32">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="32"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <StackPanel Margin="0,0,0,20"
                                                Orientation="Horizontal">
                                <TextBlock Text="Vital signs summary" FontWeight="Bold" FontSize="18"
                                                   Margin="0,0,20,0"/>
                                <TextBlock Style="{StaticResource SecondaryTextTextBlockStyle}"
                                                       VerticalAlignment="Bottom"
                                                       HorizontalAlignment="Right">
                                    <TextBlock.Text>
                                        <Binding Path="NearestExam.MedicalRecord.Appointment.AppointmentDateTime"
                                                             StringFormat="{}{0:MMM, dd yyyy}"/>
                                    </TextBlock.Text>
                                </TextBlock>
                            </StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="20"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="20"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="20"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <StackPanel Grid.Row="0" Grid.Column="0">
                                    <TextBlock Text="Blood Pressure" Foreground="{StaticResource TextSecondary}" FontSize="13"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,4">
                                        <TextBlock Text="{Binding NearestExam.BloodPressure}" 
                                                       FontSize="20" 
                                                       FontWeight="Bold" 
                                                       Style="{StaticResource BloodPressureTextBlockStyle}"/>
                                        <TextBlock Text=" mmHg" FontSize="12" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Bottom" Margin="2,0,0,3"/>
                                    </StackPanel>
                                </StackPanel>
                                <StackPanel Grid.Row="0" Grid.Column="1">
                                    <TextBlock Text="Heart Rate" Foreground="{StaticResource TextSecondary}" FontSize="13"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,4">
                                        <TextBlock Text="{Binding NearestExam.Pulse}" 
                                                       FontSize="20" 
                                                       FontWeight="Bold" 
                                                       Style="{StaticResource PulseTextBlockStyle}"/>
                                        <TextBlock Text=" bpm" FontSize="12" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Bottom" Margin="2,0,0,3"/>
                                    </StackPanel>
                                </StackPanel>
                                <StackPanel Grid.Row="2" Grid.Column="0">
                                    <TextBlock Text="Weight" Foreground="{StaticResource TextSecondary}" FontSize="13"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,4">
                                        <TextBlock Text="{Binding NearestExam.Weight}" FontSize="20" FontWeight="Bold" Foreground="{StaticResource DarkText}"/>
                                        <TextBlock Text=" kg" FontSize="12" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Bottom" Margin="2,0,0,3"/>
                                    </StackPanel>
                                </StackPanel>
                                <StackPanel Grid.Row="2" Grid.Column="1">
                                    <TextBlock Text="Height" Foreground="{StaticResource TextSecondary}" FontSize="13"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,4">
                                        <TextBlock Text="{Binding NearestExam.Height}" FontSize="20" FontWeight="Bold" Foreground="{StaticResource DarkText}"/>
                                        <TextBlock Text=" cm" FontSize="12" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Bottom" Margin="2,0,0,3"/>
                                    </StackPanel>
                                </StackPanel>
                                <StackPanel Grid.Row="4" Grid.Column="0">
                                    <TextBlock Text="BMI" Foreground="{StaticResource TextSecondary}" FontSize="13"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,4">
                                        <TextBlock Text="{Binding NearestExam.BMI}" FontSize="20" FontWeight="Bold" Foreground="{StaticResource DarkText}"/>
                                        <TextBlock Text="{Binding NearestExam.StatusBMI, StringFormat={} ({0})}" FontSize="12" VerticalAlignment="Bottom" Margin="2,0,0,3"
                                                       Style="{StaticResource BMIStatusTextBlockStyle}"/>
                                    </StackPanel>
                                </StackPanel>
                                <StackPanel Grid.Row="4" Grid.Column="1">
                                    <TextBlock Text="Temperature" Foreground="{StaticResource TextSecondary}" FontSize="13"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,4">
                                        <TextBlock Text="{Binding NearestExam.Temperature}" FontSize="20" FontWeight="Bold" 
                                                       Style="{StaticResource TemperatureTextBlockStyle}"/>
                                        <TextBlock Text=" °C" FontSize="12" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Bottom" Margin="2,0,0,3"/>
                                    </StackPanel>
                                </StackPanel>
                                <StackPanel Grid.Row="6" Grid.Column="0">
                                    <TextBlock Text="SpO2" Foreground="{StaticResource TextSecondary}" FontSize="13"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,4">
                                        <TextBlock Text="{Binding NearestExam.OxygenSaturation}" FontSize="20" FontWeight="Bold" 
                                                       Style="{StaticResource SpO2TextBlockStyle}"/>
                                        <TextBlock Text=" %" FontSize="12" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Bottom" Margin="2,0,0,3"/>
                                    </StackPanel>
                                </StackPanel>
                                <StackPanel Grid.Row="6" Grid.Column="1">
                                    <TextBlock Text="Respiratory rate" Foreground="{StaticResource TextSecondary}" FontSize="13"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,4">
                                        <TextBlock Text="{Binding NearestExam.RespiratoryRate}" FontSize="20" FontWeight="Bold" 
                                                       Style="{StaticResource RespiratoryRateTextBlockStyle}"/>
                                        <TextBlock Text=" bpm" FontSize="12" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Bottom" Margin="2,0,0,3"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                    <Border Style="{StaticResource CardStyle}" BorderBrush="{StaticResource DangerColor}" BorderThickness="1">
                        <StackPanel>
                            <TextBlock
                                Text="ALLERGIES"
                                Foreground="{StaticResource DangerColor}"
                                FontFamily="Segoe UI"
                                FontSize="18"
                                Margin="0,0,0,10"/>
                            <ItemsControl ItemsSource="{Binding Allergies}"
                                            Margin="0,0,0,20"
                                            Background="Transparent"
                                            BorderBrush="Transparent"
                                            Visibility="{Binding Allergies,
                                                         Converter={StaticResource CollectionToVisibilityConverter}}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border
                                                Style="{StaticResource BaseCustomBorderStyle}"
                                                Background="{StaticResource StatTagBorder}"
                                                BorderBrush="{StaticResource StatTagBorderBrush}"
                                                Margin="0,0,0,10"
                                                Visibility="{Binding Allergies,
                                                             Converter={StaticResource StringToVisibility}}">
                                            <TextBlock
                                                    FontFamily="Segoe UI"
                                                    FontSize="16"
                                                    Foreground="{StaticResource StatTagTextBlock}">
                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="{}{0}">
                                                        <Binding Path="Allergies"/>
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            <TextBlock
                                    Text="You don't have any current allergies."
                                    Visibility="{Binding Allergies, Converter={StaticResource EmptyCollectionToVisibilityConverter}}"
                                    Style="{StaticResource CustomBaseTextBlockStyle}"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Medical history timeline" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Margin="0,0,0,24"/>
                    <ItemsControl ItemsSource="{Binding Records}"
                                  Grid.Row="1">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="White" 
                                        BorderBrush="#0078D4" 
                                        BorderThickness="0,2,0,0" 
                                        CornerRadius="10" 
                                        VerticalAlignment="Top"
                                        Margin="20">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="20" Color="#DDDDDD" ShadowDepth="5" Opacity="0.5"/>
                                    </Border.Effect>
                                    <Grid Margin="20">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid Grid.Row="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Border Grid.Column="0" 
                                                    BorderBrush="#0078D4" 
                                                    BorderThickness="2" 
                                                    CornerRadius="12" 
                                                    Width="60" Height="60"
                                                    Margin="0,0,15,0">
                                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                                    <TextBlock Text="{Binding Record.Appointment.AppointmentDateTime,
                                                                      StringFormat={}{0:dd}}" 
                                                               FontWeight="Bold" FontSize="22" Foreground="#0078D4" HorizontalAlignment="Center"/>
                                                    <TextBlock Text="{Binding Record.Appointment.AppointmentDateTime,
                                                                      StringFormat={}{0:MMM}}" 
                                                               FontSize="12" Foreground="#666666" HorizontalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Record.Appointment.ChiefComplaint}" 
                                                           FontSize="18" 
                                                           FontWeight="SemiBold" 
                                                           Foreground="Black"/>
                                                <TextBlock Style="{StaticResource SecondaryTextTextBlockStyle}"
                                                           Margin="0,2,0,0">
                                                    <TextBlock.Text>
                                                        <MultiBinding StringFormat="{}Dr. {0} {1} • Medicare">
                                                            <Binding Path="Record.Appointment.Doctor.User.FirstName"/>
                                                            <Binding Path="Record.Appointment.Doctor.User.LastName"/>
                                                        </MultiBinding>
                                                    </TextBlock.Text>
                                                </TextBlock>
                                            </StackPanel>
                                            <ToggleButton x:Name="DetailsToggle"
                                                          Grid.Column="2"
                                                          VerticalAlignment="Top"
                                                          Margin="0,5,0,0"
                                                          Cursor="Hand"
                                                          Background="Transparent"
                                                          BorderThickness="0">
                                                <ToggleButton.Style>
                                                    <Style TargetType="ToggleButton">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="ToggleButton">
                                                                    <StackPanel Orientation="Horizontal">
                                                                        <Path x:Name="Arrow" 
                                                                              Data="M 0 0 L 4 4 L 8 0" 
                                                                              Stroke="#0078D4" 
                                                                              StrokeThickness="2" 
                                                                              VerticalAlignment="Center" 
                                                                              Margin="0,2,5,0"
                                                                              RenderTransformOrigin="0.5,0.5">
                                                                            <Path.RenderTransform>
                                                                                <RotateTransform Angle="0"/>
                                                                            </Path.RenderTransform>
                                                                        </Path>
                                                                        <TextBlock Text="Details" 
                                                                                   Foreground="#0078D4" 
                                                                                   FontWeight="SemiBold"
                                                                                   FontSize="13"/>
                                                                    </StackPanel>
                                                                    <ControlTemplate.Triggers>
                                                                        <Trigger Property="IsChecked" Value="True">
                                                                            <Trigger.EnterActions>
                                                                                <BeginStoryboard>
                                                                                    <Storyboard>
                                                                                        <DoubleAnimation Storyboard.TargetName="Arrow"
                                                                                                         Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                                                                                                         To="180" Duration="0:0:0.2"/>
                                                                                    </Storyboard>
                                                                                </BeginStoryboard>
                                                                            </Trigger.EnterActions>
                                                                            <Trigger.ExitActions>
                                                                                <BeginStoryboard>
                                                                                    <Storyboard>
                                                                                        <DoubleAnimation Storyboard.TargetName="Arrow"
                                                                                                         Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                                                                                                         To="0" Duration="0:0:0.2"/>
                                                                                    </Storyboard>
                                                                                </BeginStoryboard>
                                                                            </Trigger.ExitActions>
                                                                        </Trigger>
                                                                    </ControlTemplate.Triggers>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>
                                                </ToggleButton.Style>
                                            </ToggleButton>
                                        </Grid>
                                        <Grid Grid.Row="1" x:Name="ContentSection" MaxHeight="0" ClipToBounds="True">
                                            <Grid Margin="0,20,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="1.5*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0" Margin="0,0,20,0">
                                                    <TextBlock Text="DIAGNOSIS" FontSize="11" FontWeight="Bold" Foreground="Gray"/>
                                                    <TextBlock Text="{Binding Record.Diagnosis}" 
                                                               Foreground="#0078D4" FontWeight="Bold" FontSize="14" Margin="0,5,0,20"/>
                                                    <TextBlock Text="TREATMENT PLAN" FontSize="11" FontWeight="Bold" Foreground="Gray"/>
                                                    <TextBlock Text="{Binding Record.TreatmentPlan}" 
                                                               TextWrapping="Wrap" 
                                                               Foreground="#444444" 
                                                               FontSize="13" 
                                                               LineHeight="20"
                                                               Margin="0,5,0,0"/>
                                                </StackPanel>
                                                <Border Background="#F8F9FA" CornerRadius="8" Padding="15"
                                                        Grid.Column="1">
                                                    <StackPanel>
                                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                                            <TextBlock Text="{Binding Prescription.PrescriptionID, StringFormat={}Prescription (#{0})}" FontWeight="Bold" FontSize="12" Foreground="Black"/>
                                                        </StackPanel>
                                                        <ItemsControl ItemsSource="{Binding Items}">
                                                            <ItemsControl.ItemTemplate>
                                                                <DataTemplate>
                                                                    <StackPanel Margin="0,0,0,10">
                                                                        <StackPanel Orientation="Horizontal">
                                                                            <Path Data="M3,6 A3,3 0 1 1 3,0 L9,0 A3,3 0 1 1 9,6 Z" Fill="Black" Stretch="Uniform" Height="10" Width="15" Margin="0,0,5,0"/>
                                                                            <TextBlock Text="{Binding Medication.Name }" FontWeight="Bold" FontSize="13"/>
                                                                        </StackPanel>
                                                                        <TextBlock Foreground="Gray" FontSize="11" Margin="20,2,0,0"
                                                                                   TextWrapping="Wrap">
                                                                            <TextBlock.Text>
                                                                                <MultiBinding StringFormat="{}{0} {1}s in {2} days ({3}) • {4}">
                                                                                    <Binding Path="Quantity"/>
                                                                                    <Binding Path="Medication.Form"/>
                                                                                    <Binding Path="DurationDays"/>
                                                                                    <Binding Path="Frequency"/>
                                                                                    <Binding Path="Instruction"/>
                                                                                </MultiBinding>
                                                                            </TextBlock.Text>
                                                                        </TextBlock>
                                                                    </StackPanel>
                                                                </DataTemplate>
                                                            </ItemsControl.ItemTemplate>
                                                        </ItemsControl>
                                                    </StackPanel>
                                                </Border>
                                            </Grid>
                                        </Grid>
                                    </Grid>
                                    <Border.Triggers>
                                        <EventTrigger RoutedEvent="ToggleButton.Checked" SourceName="DetailsToggle">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetName="ContentSection" 
                                                                     Storyboard.TargetProperty="MaxHeight"
                                                                     To="300" 
                                                                     Duration="0:0:0.4">
                                                        <DoubleAnimation.EasingFunction>
                                                            <CubicEase EasingMode="EaseOut"/>
                                                        </DoubleAnimation.EasingFunction>
                                                    </DoubleAnimation>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                        <EventTrigger RoutedEvent="ToggleButton.Unchecked" SourceName="DetailsToggle">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetName="ContentSection" 
                                                                     Storyboard.TargetProperty="MaxHeight"
                                                                     To="0" 
                                                                     Duration="0:0:0.3">
                                                        <DoubleAnimation.EasingFunction>
                                                            <CubicEase EasingMode="EaseOut"/>
                                                        </DoubleAnimation.EasingFunction>
                                                    </DoubleAnimation>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </Border.Triggers>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Grid>
        </ScrollViewer>
        <Grid Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
              Grid.RowSpan="2" 
              Background="#80FFFFFF" 
              d:IsHidden="False">
            <fa:ImageAwesome 
                Icon="Spinner" 
                Spin="True" 
                Height="48" 
                Width="48"/>
        </Grid>
    </Grid>
</Page>
