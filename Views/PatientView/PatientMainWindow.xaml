<Window x:Class="PersonalizedHealthcareTrackingSystemFinal.Views.PatientView.PatientMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PersonalizedHealthcareTrackingSystemFinal.Views.PatientView"
        mc:Ignorable="d"
        Height="600" Width="1000" WindowState="Maximized"
        Icon="/Resources/Logo/logo.ico">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border 
            Style="{StaticResource SidebarBorderStyle}"
            Background="#f1f5f9"
            BorderBrush="{StaticResource LightBorder}"
            BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="150"/>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <Image Source="/Resources/Logo/logo.png"                       
                       HorizontalAlignment="Left" 
                       Height="100"
                       Width="100" Margin="59.5,0,0,0"/>

                <ListBox x:Name="Sidebar"
                         Grid.Row="1"
                         Background="Transparent"
                         Foreground="White"
                         BorderThickness="0"
                         FontSize="18" SelectionChanged="Sidebar_SelectionChanged"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="15"/>
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#34495E"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#3E5060"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListBox.ItemContainerStyle>

                    <ListBoxItem Tag="Home">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome 
                                Icon="Home" 
                                Width="20" 
                                Height="20" 
                                Margin="0,0,10,0" 
                                VerticalAlignment="Center" 
                                Foreground="#64748b"/>

                            <TextBlock Text="Home"
                                       Foreground="#64748b"
                                       FontSize="16"/>
                        </StackPanel>
                    </ListBoxItem>

                    <ListBoxItem Tag="Booking">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome 
                                Icon="CalendarCheckOutline" 
                                Width="20" 
                                Height="20" 
                                Margin="0,0,10,0" 
                                VerticalAlignment="Center" 
                                Foreground="#64748b"/>
                            <TextBlock Text="Booking"
                                       Foreground="#64748b"
                                       FontSize="16"/>
                        </StackPanel>
                    </ListBoxItem>

                    <ListBoxItem Tag="Medication Schedule">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="Calendar" Width="20" Height="20" Margin="0,0,10,0" VerticalAlignment="Center" Foreground="#64748b"/>
                            <TextBlock Text="Medication Schedule"
                                       Foreground="#64748b"
                                       FontSize="16"/>
                        </StackPanel>
                    </ListBoxItem>

                    <ListBoxItem Tag="Medical Records">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="Clipboard" Width="20" Height="20" Margin="0,0,10,0" VerticalAlignment="Center" Foreground="#64748b"/>
                            <TextBlock Text="Medical Records"
                                       Foreground="#64748b"
                                       FontSize="16"/>
                        </StackPanel>
                    </ListBoxItem>

                </ListBox>

                <Border Grid.Row="2"
                        Background="#f1f5f9"
                        BorderThickness="0,1,0,0"
                        BorderBrush="#64748b"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Center">
                    <StackPanel
                            Orientation="Horizontal"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Margin="12,12,12,12">
                        <Ellipse Width="30" Height="30"
                                 Margin="0,0,5,0"
                                 Stroke="#1A252F" StrokeThickness="1">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="/Resources/Avatar/Patient.jpg"/>
                            </Ellipse.Fill>
                        </Ellipse>

                        <StackPanel Grid.Column="1" 
                                    Orientation="Vertical" 
                                    VerticalAlignment="Center"
                                    Margin="10,0,5,0">

                            <TextBlock Text="{Binding PatientName}"
                                       Foreground="#64748b"
                                       FontWeight="SemiBold"
                                       FontSize="14"
                                       TextTrimming="CharacterEllipsis"/>

                            <TextBlock Text="{Binding PatientEmail}"
                                       Foreground="#64748b"
                                       FontSize="11"
                                       TextTrimming="CharacterEllipsis"/>
                        </StackPanel>

                        <Button Grid.Column="2"
                                Style="{StaticResource AdjustButton}"
                                Background="Transparent" 
                                BorderThickness="0" 
                                Cursor="Hand"   
                                VerticalAlignment="Center"
                                Command="{Binding SignOutCommand}"
                                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}">

                                <fa:ImageAwesome Icon="SignOut" 
                                                 Width="25" 
                                                 Height="25" 
                                                 Foreground="#E74C3C" 
                                                 VerticalAlignment="Center"/>
                        </Button>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <Frame x:Name="PatientMainContent"
               Grid.Column="1"
               NavigationUIVisibility="Hidden"
               Background="#ECF0F1"/>
    </Grid>
</Window>
