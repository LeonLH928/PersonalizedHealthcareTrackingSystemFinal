<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Page Header Text Block Style-->
    <Style x:Key="PageHeaderTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="25"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
    </Style>

    <!-- Secondary Text Text Block Style-->
    <Style x:Key="SecondaryTextTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryTextBlock}"/>
    </Style>

    <!-- Custom Base Text Block Style -->
    <Style x:Key="CustomBaseTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Regular"/>
    </Style>
    
    <!-- Priority Text Block Style-->
    <Style x:Key="PriorityTextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource CustomBaseTextBlockStyle}">
        <Setter Property="Foreground" Value="{StaticResource RoutineTagTextBlock}"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding Priority}" Value="Urgent">
                <Setter Property="Foreground" Value="{StaticResource UrgentTagTextBlock}"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding Priority}" Value="Stat">
                <Setter Property="Foreground" Value="{StaticResource StatTagTextBlock}"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="FormLabel" TargetType="TextBlock">
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{StaticResource DarkText}"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>

    <Style x:Key="FormInput" TargetType="TextBox">
        <Setter Property="Padding" Value="12"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Margin" Value="0,0,0,16"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="8"
                        Padding="{TemplateBinding Padding}">
                        <ScrollViewer x:Name="PART_ContentHost"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="FormComboBox" TargetType="ComboBox">
        <Setter Property="Padding" Value="12"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Margin" Value="0,0,0,16"/>
    </Style>

    <Storyboard x:Key="BlinkAnimation" RepeatBehavior="Forever">
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                   From="1.0" To="0.4" Duration="0:0:0.75"
                   AutoReverse="True"/>
    </Storyboard>

    <Style x:Key="CardTitleStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="19"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource DarkText}"/>
        <Setter Property="Margin" Value="0,0,0,16"/>
    </Style>

</ResourceDictionary>